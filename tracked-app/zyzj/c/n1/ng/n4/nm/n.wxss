.nap {
    bottom: -56rpx;
    left: 0;
    margin-top: 20rpx;
    opacity: 0;
    position: absolute;
    text-align: center;
    transform: scale(.2);
    transform-origin: center;
    transition: all .4s ease;
    width: 100%;
}

.nay {
    align-items: center;
    background-color: rgba(0,0,0,.8);
    border-radius: 28rpx;
    display: inline-flex;
    font-size: 24rpx;
    height: 40rpx;
    justify-content: center;
    overflow: hidden;
    padding: 8rpx;
}

.nao {
    bottom: 0;
    opacity: 1;
    transform: scale(1);
}

.naa {
    bottom: 80rpx;
    opacity: 0;
    transform: scale(.2);
}

.nah {
    border-radius: 20rpx;
    height: 40rpx;
    margin: 8rpx 8rpx 8rpx 0;
    width: 40rpx;
}

.na9 {
    color: #fff;
    font-size: 28rpx;
    line-height: 40rpx;
    position: relative;
    z-index: 2;
}

.nau {
    color: #ccc;
    margin-right: 8rpx;
}

.nau,.nav {
    display: inline-block;
    max-width: 200rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    vertical-align: top;
    white-space: nowrap;
}

.nav {
    font-weight: var(--font-weight-bolder);
    margin: 0 4rpx;
}