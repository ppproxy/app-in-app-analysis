.more-dialog-wrapper .more-dialog-content {
    background-color: #fff;
    position: absolute;
    width: 100%;
    height: 640rpx;
    bottom: 0;
    left: 0;
    transition: all .3s linear;
    transform: translateY(100%);
    background-image: linear-gradient(-180deg,#eefffc 2%,#fff 84%);
}

.more-dialog-wrapper .more-dialog-content.show {
    transform: translateY(0);
}

.more-dialog-wrapper .more-dialog-content .title {
    margin: 60rpx 36rpx 50rpx;
    line-height: 63rpx;
    font-size: 44rpx;
    color: #333;
}

.more-dialog-wrapper .more-dialog-content .close-wrap {
    position: absolute;
    top: 0;
    right: 0;
    display: flex;
    justify-content: center;
    align-items: center;
    width: 76rpx;
    height: 76rpx;
}

.more-dialog-wrapper .more-dialog-content .close-wrap .close-icon {
    width: 36rpx;
    height: 36rpx;
}

.more-dialog-wrapper .more-dialog-content .bg-img {
    position: absolute;
    right: 0;
    bottom: 0;
    width: 344rpx;
    height: 228rpx;
    z-index: -1;
}

.more-dialog-wrapper .more-dialog-content .list-wrap {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
    margin: 0 36rpx;
}

.more-dialog-wrapper .more-dialog-content .list-wrap .item-wrap {
    width: 160rpx;
    height: 140rpx;
    margin-bottom: 30rpx;
    background: #fff;
    box-shadow: 0 8rpx 20rpx 0 rgba(9,40,71,.08);
    border-radius: 16rpx;
    text-align: center;
}

.more-dialog-wrapper .more-dialog-content .list-wrap .item-wrap.disable-btn {
    opacity: 0;
}

.more-dialog-wrapper .more-dialog-content .list-wrap .item-img {
    margin-top: 20rpx;
    width: 60rpx;
    height: 60rpx;
}

.more-dialog-wrapper .more-dialog-content .list-wrap .item-txt {
    font-size: 24rpx;
    color: #444;
}