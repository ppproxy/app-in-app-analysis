.didi-card-dialog-wrapper .didi-card-dialog-content {
    position: absolute;
    margin-top: 80rpx;
    top: 50%;
    left: 50%;
    transform: translate(-50%,-50%);
    text-align: center;
}

.didi-card-dialog-wrapper .didi-card-dialog-content .close {
    margin-top: 140rpx;
    font-size: 66rpx;
    color: #fff;
}

.didi-card-dialog-wrapper .didi-card-dialog-content .main {
    background-color: #fff;
    padding: 32rpx 32rpx 11rpx;
    border-radius: 16rpx;
}

.didi-card-dialog-wrapper .didi-card-dialog-content .main .top-img {
    display: block;
    width: 470rpx;
    height: 196rpx;
    border-radius: 30rpx;
}

.didi-card-dialog-wrapper .didi-card-dialog-content .main .content {
    margin: 36rpx 0;
    padding: 0 42rpx;
    font-size: 28rpx;
    line-height: 37rpx;
    color: #333;
}

.didi-card-dialog-wrapper .didi-card-dialog-content .main .btn {
    font-size: 36rpx;
    height: 100rpx;
    line-height: 100rpx;
}

.didi-card-dialog-wrapper .didi-card-dialog-content .main .btn-go {
    color: #fff;
    background-image: linear-gradient(225deg,#20eecf,#14d0b4);
    border-radius: 14rpx;
    font-weight: 700;
}

.didi-card-dialog-wrapper .didi-card-dialog-content .main .btn-scan {
    color: #666;
}