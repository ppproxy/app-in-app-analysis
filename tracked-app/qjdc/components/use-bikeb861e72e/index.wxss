.init-use-bike {
    margin: 0rpx 20rpx 24rpx;
}

.init-use-bike .msg-flow-module {
    background-image: linear-gradient(90deg,#d7d0fd,#c6fff4);
    border-radius: 34rpx 34rpx 0rpx 0rpx;
    height: 112rpx;
    position: relative;
    padding: 0 40rpx;
}

.init-use-bike .msg-flow-module .msg-swiper {
    height: 80rpx;
}

.init-use-bike .msg-flow-module .flow-item {
    height: 80rpx;
    display: flex;
    align-items: center;
}

.init-use-bike .msg-flow-module .flow-item .taskTag {
    margin-right: 10rpx;
    width: 80rpx;
    height: 32rpx;
    line-height: 32rpx;
    text-align: center;
    background: #ff5959;
    font-size: 20rpx;
    color: #fff;
    border-radius: 8rpx;
}

.init-use-bike .msg-flow-module .flow-item .flow-content {
    flex: 1;
    padding-right: 20rpx;
}

.init-use-bike .msg-flow-module .flow-item .flow-content-stimulate-no {
    flex: 1;
    position: relative;
}

.init-use-bike .msg-flow-module .flow-item .flow-content-stimulate {
    max-width: 425rpx;
    position: relative;
}

.init-use-bike .msg-flow-module .flow-item .flow-content-stimulate:after {
    content: "";
    display: block;
    width: 20rpx;
    height: 20rpx;
    background: url("https://pt-starimg.didistatic.com/static/starimg/img/Ns1ahbKpG01606130474292.png");
    background-size: 100%;
    position: absolute;
    right: -26rpx;
    top: 50%;
    transform: translateY(-50%);
}

.init-use-bike .msg-flow-module .flow-item .btn-text {
    border: 2rpx solid #fe7f3f;
    border-radius: 10rpx;
    color: #fe7f3f;
}

.init-use-bike .msg-flow-module .flow-item .btn-text,.init-use-bike .msg-flow-module .flow-item .btn-text-new {
    text-align: center;
    background: hsla(0,0%,100%,.4);
    width: 128rpx;
    height: 50rpx;
    line-height: 50rpx;
    font-family: PingFangSC-Medium;
    font-weight: 700;
    font-size: 24rpx;
}

.init-use-bike .msg-flow-module .flow-item .btn-text-new {
    border: 2rpx solid #ff5959;
    border-radius: 10rpx;
    color: #ff5959;
}

.init-use-bike .msg-flow-module .spokesperson {
    position: absolute;
    right: 0;
    bottom: 0;
    width: 230rpx;
    height: 168rpx;
}

.init-use-bike .use-bike-module {
    box-shadow: 0 8px 20px 0 rgba(9,40,71,.16);
    margin-top: -30rpx;
    background: #fff;
    border-radius: 34rpx;
    position: relative;
    z-index: 2;
    overflow: hidden;
}

.init-use-bike .use-bike-module .find-bike {
    height: 98rpx;
    display: flex;
    align-items: center;
    padding: 0 20rpx;
}

.init-use-bike .use-bike-module .find-bike .position-img {
    margin-right: 10rpx;
    width: 70rpx;
    height: 70rpx;
    margin-top: -8rpx;
}

.init-use-bike .use-bike-module .find-bike .find-bike-text {
    padding-right: 40rpx;
    font-family: PingFangSC-Medium;
    font-weight: 700;
    font-size: 28rpx;
    color: #000;
    max-width: 550rpx;
    text-overflow: ellipsis;
    display: -webkit-box;
    word-break: break-all;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 1;
    overflow: hidden;
    line-height: 32rpx;
    position: relative;
}

.init-use-bike .use-bike-module .find-bike .find-bike-text .arrow-img {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    right: 0;
    width: 32rpx;
    height: 32rpx;
}

.init-use-bike .use-bike-module .scan-bike {
    margin: 0 auto;
    width: 630rpx;
    height: 92rpx;
    line-height: 92rpx;
    background-image: linear-gradient(225deg,#20eecf,#14d0b4);
    border-radius: 20rpx;
    font-family: PingFangSC-Medium;
    font-weight: 700;
    font-size: 32rpx;
    color: #fff;
    letter-spacing: 0;
    text-align: center;
    margin-bottom: 30rpx;
}

.init-use-bike .use-bike-module .functional {
    display: flex;
    justify-content: space-around;
    height: 90rpx;
    align-items: center;
    background: #f8fafc;
    font-size: 24rpx;
    padding: 0 20rpx 0 10rpx;
}

.init-use-bike .use-bike-module .functional .functional-list {
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    position: relative;
    flex: 1;
    display: flex;
    justify-content: center;
    align-items: center;
    border-right: 2rpx solid rgba(0,0,0,.18);
    height: 40rpx;
}

.init-use-bike .use-bike-module .functional .functional-list:last-child {
    border-right: none;
}

.init-use-bike .use-bike-module .functional .functional-list .functional-img {
    width: 32rpx;
    height: 32rpx;
    margin-right: 8rpx;
}

.init-use-bike .use-bike-module .functional .more-icon-wrap {
    display: flex;
    align-items: center;
    width: 43rpx;
}

.init-use-bike .use-bike-module .functional .more-icon-wrap .more-icon {
    padding-left: 22rpx;
    width: 10rpx;
    height: 32rpx;
}