.box-area {
    padding: 0 20rpx;
    display: flex;
    justify-content: space-between;
    box-sizing: border-box;
    height: 120rpx;
}

.box-area .list-wrap {
    height: 110rpx;
}

.box-area .list {
    padding-top: 10rpx;
    text-align: center;
}

.box-area .list .icon-wrap {
    display: inline-block;
    position: relative;
    width: 60rpx;
    height: 60rpx;
}

.box-area .list .icon-wrap .icon {
    width: 100%;
    height: 100%;
}

.box-area .list .icon-wrap .tag {
    position: absolute;
    top: -8rpx;
    max-width: 60rpx;
    left: 50%;
    background-image: linear-gradient(45deg,#ff9258,#ff5b1d);
    padding: 2rpx 15rpx;
    border-radius: 999rpx;
    font-size: 20rpx;
    letter-spacing: 0;
}

.box-area .list .icon-wrap .tag,.box-area .list .text {
    white-space: nowrap;
    text-overflow: ellipsis;
    overflow: hidden;
    font-family: PingFangSC-Medium;
    color: #fff;
}

.box-area .list .text {
    font-size: 24rpx;
    text-align: center;
}

.indicator {
    width: 60rpx;
    height: 6rpx;
    margin: 20rpx auto;
    border-radius: 3rpx;
}