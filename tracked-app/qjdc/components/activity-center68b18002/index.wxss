.activity_center-panel {
    padding: 0 20rpx;
}

.activity_center-panel .activity_center-top-ad {
    margin-bottom: 24rpx;
}

.activity_center-panel .activity_center-bot-banner {
    display: flex;
    margin-bottom: 24rpx;
}

.activity_center-panel .activity_center-bot-banner .activity_center-bot-item:first-child {
    margin-right: 12rpx;
}

.activity_center-panel .activity_center-bot-banner .activity_center-bot-item:first-child .activity_center-bot-item-panel {
    background-image: linear-gradient(90deg,#ffac66 0,#ffeac9);
}

.activity_center-panel .activity_center-bot-banner .activity_center-bot-item:last-child {
    margin-left: 12rpx;
}

.activity_center-panel .activity_center-bot-banner .activity_center-bot-item:last-child .activity_center-bot-item-panel {
    background-image: linear-gradient(90deg,#ff8f7b 0,#ffe9e2);
}

.activity_center-panel .activity_center-bot-banner .activity_center-bot-item {
    flex-direction: row;
    width: 50%;
    height: 140rpx;
}

.activity_center-panel .activity_center-bot-banner .activity_center-bot-item .activity_center-bot-item-panel {
    border-radius: 30rpx;
    box-sizing: border-box;
    height: 100%;
    display: flex;
    justify-content: space-between;
}

.activity_center-panel .activity_center-bot-banner .activity_center-bot-item .activity_center-bot-item-panel .activity_center-bot-text {
    padding-left: 24rpx;
    padding-top: 30rpx;
}

.activity_center-panel .activity_center-bot-banner .activity_center-bot-item .activity_center-bot-item-panel .activity_center-bot-text .activity_center-bot-title {
    font-family: PingFangSC-Medium;
    font-size: 28rpx;
    color: #fff;
}

.activity_center-panel .activity_center-bot-banner .activity_center-bot-item .activity_center-bot-item-panel .activity_center-bot-icon {
    width: 140rpx;
    height: 140rpx;
}

.activity_center-panel .activity_center-bot-banner .activity_center-bot-item .activity_center-bot-item-panel .activity_center-bot-icon .activity_center-bot-img {
    width: 140rpx;
    height: 140rpx;
    border-radius: 0 30rpx 30rpx 0;
}

.activity_center-panel .activity_center-msg-banner .activity-item .wx-ad {
    margin-bottom: 20rpx;
}

.activity_center-panel .activity_center-bottom-line {
    display: flex;
    justify-items: center;
    font-family: PingFangSC-Regular;
    font-size: 24rpx;
    color: #666;
    text-align: center;
    padding: 0 20rpx;
    align-items: top;
    margin-top: 60rpx;
    margin-bottom: 135rpx;
}

.activity_center-panel .activity_center-bottom-line .activity_center-bottom-border {
    width: 240rpx;
    height: 16rpx;
    border-bottom: 1rpx solid hsla(0,0%,40%,.1);
}

.activity_center-panel .activity_center-bottom-line .activity_center-bottom-text {
    padding: 0 19rpx;
    flex-shrink: 0;
}