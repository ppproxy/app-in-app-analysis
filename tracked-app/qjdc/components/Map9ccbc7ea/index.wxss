.map-container {
    position: relative;
    width: 100%;
    height: 100%;
    background: #fff;
    flex: 1;
}

.map-container .map {
    position: relative;
    width: 100%;
    height: auto;
}

.map-container .map .map-probe {
    position: absolute;
    left: 50%;
    top: 50%;
    transform: translate(-50%,-100%);
}

.map-container .map .map-probe .img {
    width: 90rpx;
    height: 70rpx;
}

.map-container .map .map-bottom-img {
    position: absolute;
    width: 100%;
    bottom: -4rpx;
    left: 0;
    background: hsla(0,0%,100%,0);
    height: 80rpx;
    z-index: 9;
}

.map-container .map .map-reset {
    position: absolute;
    width: 66rpx;
    height: 66rpx;
    border-radius: 50%;
    box-shadow: 0 10rpx 10rpx 2rpx rgba(65,65,76,.1);
    right: 36rpx;
    bottom: 60rpx;
}

.map-container .map .map-reset .img {
    width: 66rpx;
    height: 66rpx;
}

.map-container .map .map-riding-popup {
    position: absolute;
    left: 50%;
    top: 50%;
    transform: translate(-50%,-100%);
    margin-top: -110rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 2;
}

.map-container .map .map-riding-popup .riding-popup {
    max-width: 520rpx;
    padding: 20rpx 40rpx 20rpx 20rpx;
    background: #404350;
    color: #fff;
    justify-content: start;
    align-items: center;
    display: flex;
    flex-shrink: 0;
    border-radius: 999rpx;
}

.map-container .map .map-riding-popup .riding-popup .riding-popup-icon {
    flex-shrink: 0;
    width: 60rpx;
    height: 60rpx;
}

.map-container .map .map-riding-popup .riding-popup .riding-popup-icon image {
    width: 100%;
    height: 100%;
    box-sizing: border-box;
}

.map-container .map .map-riding-popup .riding-popup .riding-popup-main {
    margin-left: 12rpx;
}

.map-container .map .map-riding-popup .riding-popup .riding-popup-main .riding-popup-title {
    font-family: PingFangSC-Medium;
    font-size: 28rpx;
    color: #fff;
    letter-spacing: 0;
    text-align: left;
}

.map-container .map .map-riding-popup .riding-popup .riding-popup-main .riding-popup-content {
    font-family: PingFangSC-Regular;
    font-size: 24rpx;
    color: #ccc;
}

.map-container .map .map-riding-popup .riding-popup .riding-popup-jump-icon {
    display: flex;
    flex-shrink: 0;
    margin-left: 16rpx;
    width: 24rpx;
    height: 24rpx;
}

.map-container .map .map-riding-popup .riding-popup .riding-popup-jump-icon image {
    width: 100%;
    height: 100%;
    box-sizing: border-box;
}

.map-container .map .map-tips {
    position: absolute;
    left: 50%;
    top: 50%;
    transform: translate(-50%,-100%);
    margin-top: -110rpx;
    z-index: 2;
}

.map-container .map .map-tips-cont {
    padding: 10rpx 30rpx;
}

.map-container .map .map-tips-cont,.map-container .map .map-tips-cont2 {
    display: flex;
    flex-direction: row;
    align-items: center;
    font-size: 28rpx;
    background-color: #fff;
    letter-spacing: 0;
    color: #000;
    border-radius: 50rpx;
    box-shadow: 0 4rpx 6rpx 0 rgba(9,40,71,.08);
    font-family: PingFangSC-Medium;
    box-sizing: border-box;
}

.map-container .map .map-tips-cont2 {
    padding: 10rpx 30rpx 10rpx 10rpx;
}

.map-container .map .map-tips .map-tips-icon {
    width: 60rpx;
    height: 60rpx;
}

.map-container .map .map-tips .text {
    padding-left: 12rpx;
    white-space: nowrap;
}

.map-container .map .map-tips .bg {
    top: 32rpx;
}

.map-container .map .map-tips .bg,.map-container .map .map-tips .bgIcon {
    position: absolute;
    width: 0;
    height: 0;
    border: 14rpx solid transparent;
    border-top: 14rpx solid #fff;
    left: 50%;
    transform: translate(-50%,100%);
}

.map-container .map .map-tips .bgIcon {
    top: 43rpx;
}

.map-container .map .bubble-tip {
    position: absolute;
    left: 0;
    right: 0;
    margin: 0 auto;
    bottom: 55rpx;
    width: 670rpx;
    padding: 12rpx 12rpx 12rpx 32rpx;
    background-color: rgba(37,38,45,.8);
    border-radius: 100rpx;
    box-sizing: border-box;
    display: flex;
    align-items: center;
    z-index: 99;
}

.map-container .map .bubble-tip .text {
    color: #fff;
    font-size: 24rpx;
    text-overflow: ellipsis;
    display: -webkit-box;
    word-break: break-all;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    overflow: hidden;
    white-space: normal;
}

.map-container .map .bubble-tip .close-btn {
    width: 20rpx;
    height: 20rpx;
    padding: 20rpx;
    z-index: 100;
}

.map-container .map .appoint-bubble {
    height: 80rpx;
    padding-right: 40rpx;
}

.map-container .map .appoint-bubble .close-btn {
    position: absolute;
    right: 20rpx;
    top: 0;
    bottom: 0;
    margin: auto 0;
}

.map-container .map .layer-box {
    height: 100%;
    position: relative;
}

.map-container .map .layer-box:after {
    content: "";
    position: absolute;
    width: 100%;
    height: 100%;
    background: rgba(0,0,0,.6);
    top: 0;
    left: 0;
}

.map-container .map .layer-box .layer-box-image {
    z-index: 8;
    position: absolute;
    bottom: 29rpx;
    width: 100%;
    transform: translateX(-50%);
    left: 50%;
    height: auto;
}

.map-container .map .layer-box .layer-box-close-btn {
    z-index: 10;
    position: absolute;
    right: 30rpx;
    top: 30rpx;
    width: 20rpx;
    height: 20rpx;
    padding: 10rpx;
}

.map-container .icon-list {
    position: absolute;
    left: 36rpx;
    bottom: 60rpx;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
}

.map-container .icon-list .icon {
    width: 66rpx;
    height: 66rpx;
    border-radius: 50%;
    box-shadow: 0 10rpx 10rpx 2rpx rgba(65,65,76,.1);
}

.map-container .icon-list .icon-repair {
    width: 196rpx;
    border-radius: 0;
    margin-top: 30rpx;
    box-shadow: none;
}

.map-container .icon-list .icon-custom {
    margin-top: 30rpx;
}

.map-container .card-bubble {
    position: absolute;
    left: 0;
    right: 0;
    margin: 0 auto;
    bottom: 55rpx;
    width: 670rpx;
    height: 110rpx;
    padding: 14rpx 40rpx;
    background-color: rgba(37,38,45,.8);
    border-radius: 100rpx;
    box-sizing: border-box;
}

.map-container .card-bubble .title {
    font-size: 32rpx;
    color: #fff;
}

.map-container .card-bubble .desc {
    font-size: 24rpx;
    color: #fff;
}

.map-container .card-bubble .desc .text {
    font-size: 24rpx;
    color: #fe7f3f;
}

.map-container .card-bubble .close-btn {
    position: absolute;
    right: 30rpx;
    top: 50%;
    transform: translateY(-50%);
    width: 20rpx;
    height: 20rpx;
    padding: 10rpx;
}