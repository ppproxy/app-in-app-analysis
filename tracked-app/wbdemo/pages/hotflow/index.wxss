.hot-flow:first-child {
    position: relative;
    z-index: 10;
    border-radius: 20rpx 20rpx 0 0;
}

.hot-flow-zone {
    position: relative;
    z-index: 10;
    box-sizing: border-box;
    padding: 0 24rpx;
    overflow: hidden;
    background: #fff;
}

.hot-flow {
    padding: 24rpx 0 16rpx;
    border-bottom: .5px solid #eee;
}

.rich-text {
    color: #151515;
}

.rich-node,.rich-text {
    line-height: 46rpx;
    font-size: 32rpx;
}

.rich-node {
    display: -webkit-box;
    -webkit-box-orient: vertical;
    overflow: hidden;
    width: 100%;
    -webkit-line-clamp: 3;
}

.rich-node .parse-text {
    display: inline;
    line-height: 46rpx;
    color: #333;
    font-size: 32rpx;
    word-break: break-all;
    font-family: PingFangSC-Regular;
}

.rich-node .parse-text.topic {
    color: #4b73a0;
}

.rich-node .parse-text.emotion {
    display: inline-block;
    vertical-align: middle;
    margin-left: 5rpx;
    width: 30rpx;
    height: 30rpx;
}

.single-pic {
    width: 65%;
}

.richstyle {
    color: #333;
    font-style: normal;
}

.icon {
    display: inline-block;
    width: 30rpx;
    vertical-align: middle;
    margin: -4rpx 6rpx 0 10rpx;
}

.media-padding {
    padding: 20rpx 0 16rpx;
}

.media .ul {
    display: flex;
    flex-wrap: wrap;
    width: 100%;
    overflow: hidden;
}

.media .li {
    box-sizing: border-box;
    float: left;
    padding-right: 8rpx;
}

.media .li:nth-child(3) {
    padding-right: 0;
}

.li.single {
    display: block;
    padding: 0;
    position: absolute;
    top: 0;
    right: 0;
}

.image_box {
    width: 100%;
    height: 100%;
    background: #ebebeb;
    border-radius: 6rpx;
}

.media .video,.media .videofeed {
    width: 100%;
    display: block;
    height: 394rpx;
}

.media .videofeed {
    position: relative;
}

.media .videofeed .img {
    background: #ebebeb;
    width: 100%;
    height: 100%;
    border-radius: 8rpx;
}

.media .videofeed .pause {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%,-50%);
    width: 128rpx;
    height: 128rpx;
}

.created-at,.user-name {
    font-size: 24rpx;
    font-family: PingFangSC-Regular;
    color: #939393;
    margin-right: 20rpx;
}

.user-name {
    margin-right: 0;
}