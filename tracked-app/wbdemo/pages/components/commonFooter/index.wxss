.footer-left {
    justify-content: space-between;
}

.comment-bar-wrap,.footer-left {
    display: flex;
    align-items: center;
}

.comment-bar-wrap {
    position: fixed;
    left: 0;
    right: 0;
    bottom: 0;
    width: 100%;
    background: #fff;
    z-index: 100;
    height: 96rpx;
    flex-direction: row;
    justify-content: start;
    border-top: .5px solid #e5e5e5;
    padding-bottom: env(safe-area-inset-bottom);
}

.bar-item {
    position: relative;
    display: flex;
    align-items: center;
    flex-direction: row;
    height: 40rpx;
    flex-grow: 1;
    width: 33.3%;
    justify-content: center;
}

.footer-left-line {
    left: 0;
    width: 1rpx;
    height: 40rpx;
    background-image: linear-gradient(180deg,#e5e5e5,#bcbcbc 26%,#bcbcbc 78%,#e5e5e5);
    position: absolute;
}

.bar-item-txt {
    font-family: PingFangSC-Regular;
    font-size: 28rpx;
    color: #333;
    margin-left: 6rpx;
    line-height: 32rpx;
}

.bar-item-wechat {
    font-size: 30rpx;
    display: flex;
    box-sizing: border-box;
    justify-content: center;
    border-radius: 34rpx;
}

.bar-item-txt-wechat,.bar-item-wechat {
    font-family: PingFangSC-Regular;
    text-align: center;
    line-height: 32rpx;
    align-items: center;
}

.bar-item-txt-wechat {
    font-size: 28rpx;
    color: #333;
    display: inline-flex;
}

.bar-icon-more {
    width: 44rpx;
    height: 44rpx;
}

.bar-icon-wechat {
    width: 60rpx;
    height: 60rpx;
    margin-right: 8rpx;
}

.black-bg {
    background-color: #000;
}

.black-bg .bar-item-txt,.black-bg .bar-item-txt-wechat {
    color: #fff;
}