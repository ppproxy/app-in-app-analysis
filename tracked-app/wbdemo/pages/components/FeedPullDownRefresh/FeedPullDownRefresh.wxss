.content {
    width: 750rpx;
    overflow: hidden;
    display: flex;
    align-items: center;
    justify-content: center;
}

.loading {
    animation: rotate 1.5s linear infinite;
    width: 32px;
    height: 32px;
}

.text {
    font-size: 12px;
    color: #939393;
}

.start-load {
    height: 35px;
}

.finish-load {
    height: 35px;
    overflow: hidden;
    font-size: 14px;
    color: #939393;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: height .3s;
}