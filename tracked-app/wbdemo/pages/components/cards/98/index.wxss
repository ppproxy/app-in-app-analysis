.back-pic-url {
    display: flex;
    width: 100%;
    height: 380rpx;
    background: #ebebeb;
}

.back-star-intro {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    width: 100%;
    color: #fff;
    background: rgba(0,0,0,.3);
    height: 165rpx;
    display: block;
}

.user-img {
    position: absolute;
    top: -40rpx;
    left: 20rpx;
    width: 130rpx;
    height: 130rpx;
}

.img {
    display: inline-block;
    width: 100%;
    height: 100%;
    border-radius: 50%;
    background: #ebebeb;
}

.screen-name {
    position: relative;
    font-size: 36rpx;
    margin: 10rpx 0 0 180rpx;
}

.followers-count {
    margin-left: 180rpx;
    font-size: 24rpx;
}

.star-desc1 {
    font-size: 24rpx;
    margin: 10rpx 0 0 20rpx;
}

.following {
    position: absolute;
    right: 20rpx;
    top: 20rpx;
    width: 140rpx;
    height: 50rpx;
    line-height: 50rpx;
    text-align: center;
    font-size: 24rpx;
    color: #000;
    background: #f8f8f8;
}

.add-icon {
    font-size: 24rpx;
    margin-right: 10rpx;
    vertical-align: top;
}