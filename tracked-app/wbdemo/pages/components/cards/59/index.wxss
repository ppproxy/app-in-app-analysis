.card-59 {
    display: flex;
    width: 100%;
    box-sizing: border-box;
    padding: 0 5rpx;
}

.card-59-pic {
    flex-grow: 1;
    width: 50%;
    margin-right: 10rpx;
    margin-bottom: 10rpx;
}

.card-59-pic:last-child {
    margin-right: 0;
}

.video,.videofeed {
    display: block;
    height: 350rpx;
    max-height: 500rpx;
    margin-bottom: -8rpx;
    position: relative;
}

.video {
    width: 100%;
}

.videofeed .pause {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%,-50%);
    width: 100rpx;
    height: 100rpx;
}

.img {
    width: 100%;
    height: 100%;
    background: #ebebeb;
}

.img:last-child {
    margin-right: 0;
}

.content {
    display: inline-block;
    background: #fff;
    padding: 20rpx;
}

.desc1 {
    font-size: 26rpx;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    line-height: 1.6;
}

.desc1,.name {
    overflow: hidden;
}

.name {
    font-size: 20rpx;
    color: grey;
    max-width: 60%;
    white-space: nowrap;
    text-overflow: ellipsis;
    word-break: break-all;
    margin-left: 10rpx;
}

.attitudes_count {
    float: right;
    font-size: 20rpx;
    color: #afafaf;
    margin-top: 6rpx;
}

.icon-good {
    top: 10rpx;
    right: 60rpx;
}