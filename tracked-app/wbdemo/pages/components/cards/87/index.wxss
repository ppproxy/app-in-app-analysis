.card-87 {
    position: relative;
    box-sizing: border-box;
    display: flex;
    width: 100%;
    background: #fff;
    z-index: 1;
}

.pic {
    width: 300rpx;
    height: 150rpx;
    background: #ebebeb;
}

.pic-mask {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    width: 100%;
    height: 40rpx;
    background: linear-gradient(transparent,rgba(0,0,0,.5));
    z-index: 1;
}

.title-sub {
    position: absolute;
    left: 16rpx;
    bottom: 10rpx;
    color: #fff;
    font-size: 24rpx;
    z-index: 10;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    overflow: hidden;
}