.card-52 {
    box-sizing: border-box;
    display: flex;
    width: 100%;
    background: #fff;
    padding: 20rpx;
    border-bottom: .5px solid #dcdcdc;
}

.item {
    flex-grow: 1;
    width: 50%;
}

.item:first-child {
    margin-right: 20rpx;
}

.show-video {
    position: relative;
    width: 100%;
    height: 200rpx;
}

.video {
    width: 100%;
    height: 100%;
    border-radius: 6rpx;
    background: #ebebeb;
}

.pause {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%,-50%);
    width: 90rpx;
    height: 90rpx;
}

.img {
    width: 100%;
    background: #ebebeb;
}

.title {
    font-size: 28rpx;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    overflow: hidden;
    line-height: 1.6;
}

.desc {
    font-size: 22rpx;
    color: #8e8e8e;
    margin: 5rpx 0 0 5rpx;
}

.price2 {
    font-size: 32rpx;
    color: #db9452;
}

.desc2 {
    font-size: 24rpx;
    color: #8e8e8e;
    margin-left: 20rpx;
}