.card-30 {
    box-sizing: border-box;
    padding: 20rpx;
    background: #fff;
    overflow: hidden;
}

.content {
    padding-left: 100rpx;
}

.name {
    display: inline-block;
    font-size: 28rpx;
    color: #f36100;
    line-height: 40rpx;
}

.desc1 {
    padding-left: 20rpx;
    margin-top: 6rpx;
    color: #898989;
    max-width: 55%;
    white-space: nowrap;
    text-overflow: ellipsis;
    overflow: hidden;
    word-break: break-all;
}

.desc1,.follow {
    font-size: 24rpx;
}

.follow {
    float: right;
    right: 20rpx;
    width: 110rpx;
    height: 40rpx;
    background: #e59e44;
    border-radius: 20rpx;
    color: #fff;
    text-align: center;
    margin-top: -50rpx;
}

.icon-add {
    font-size: 20rpx;
    color: #fff;
    margin-right: 10rpx;
}