button:after {
    border: none;
}

.piiic-placeholder-box {
    width: 100%;
    overflow: hidden;
    background: rgba(0,0,0,.4);
}

.placeholder-bottom {
    position: fixed;
    bottom: 0;
    width: 100%;
}

.placeholder-button {
    width: 100%;
    height: 100%;
    border-radius: 0;
    background: #fff;
    vertical-align: middle;
    text-align: center;
    font-size: 18px;
    color: #333;
    padding-bottom: env(safe-area-inset-bottom);
}

.placeholder-button,.tip {
    font-family: PingFangSC-Regular;
}

.tip {
    font-size: 12px;
    color: #999;
}