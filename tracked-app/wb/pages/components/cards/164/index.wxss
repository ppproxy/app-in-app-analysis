.card-164 {
    display: flex;
    width: 100%;
    box-sizing: border-box;
    padding: 0 10rpx;
}

.card-164-pic {
    flex-grow: 1;
    width: 50%;
    margin: 10rpx 16rpx 10rpx 10rpx;
}

.card-164-pic:first-child {
    margin-right: 0;
}

.videofeed {
    display: block;
    height: 347rpx;
    max-height: 500rpx;
    margin-bottom: -8rpx;
    position: relative;
}

.videofeed .img-mask {
    position: absolute;
    top: 10rpx;
    right: 10rpx;
    background: rgba(0,0,0,.35);
    width: 80rpx;
    height: 40rpx;
    border-radius: 40rpx;
    display: flex;
    align-items: center;
    justify-content: center;
}

.videofeed .img-mask .small_photo {
    width: 24rpx;
    height: 24rpx;
    margin-right: 10rpx;
}

.videofeed .img-mask .img-number {
    color: #fff;
    font-size: 24rpx;
}

.video {
    width: 100%;
    display: block;
    height: 347rpx;
    max-height: 500rpx;
    margin-bottom: -8rpx;
    position: relative;
}

.video-16-9 {
    height: 260.25rpx;
}

.video-1-1 {
    height: 347rpx;
}

.videofeed .pause {
    position: absolute;
    top: 10rpx;
    right: 10rpx;
    width: 50rpx;
    height: 50rpx;
}

.videofeed .duration {
    position: absolute;
    bottom: 10rpx;
    right: 10rpx;
    color: #fff;
    font-size: 24rpx;
    z-index: 2;
}

.videofeed .video-mask {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    width: 100%;
    height: 50rpx;
    background: linear-gradient(transparent,rgba(0,0,0,.3));
}

.img {
    width: 100%;
    height: 100%;
    background: #ebebeb;
}

.img:last-child {
    margin-right: 0;
}

.content {
    box-sizing: border-box;
    width: 100%;
    display: inline-block;
    background: #fff;
    padding: 20rpx;
}

.content-zone {
    position: relative;
    display: flex;
    align-items: baseline;
    justify-content: space-between;
}

.tag-icons {
    width: 60rpx;
    height: 30rpx;
    vertical-align: top;
    margin: 6rpx 10rpx 0 0;
    background: #ebebeb;
}

.desc1 {
    font-size: 26rpx;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 3;
    overflow: hidden;
    line-height: 1.6;
    margin-bottom: 10rpx;
    height: 120rpx;
}

.user-zone {
    display: flex;
    align-items: center;
    overflow: hidden;
    height: 44rpx;
}

.name {
    font-size: 22rpx;
    color: grey;
    max-width: 75%;
    white-space: nowrap;
    text-overflow: ellipsis;
    overflow: hidden;
    word-break: break-all;
    margin-left: 10rpx;
}

.attitudes_count {
    display: flex;
    align-items: center;
    position: absolute;
    right: 0;
    font-size: 20rpx;
    color: #afafaf;
    height: 44rpx;
}

.icon-good {
    position: relative;
    top: 0;
    right: 0;
    margin-right: 10rpx;
}