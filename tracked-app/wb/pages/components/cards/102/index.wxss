.card-102 {
    box-sizing: border-box;
    width: 100%;
    height: 292rpx;
    padding: 10rpx 20rpx;
    background: #fff;
    border-bottom: .5px solid #e5e5e5;
}

.title {
    white-space: nowrap;
    text-overflow: ellipsis;
    overflow: hidden;
    word-break: break-all;
}

.source {
    font-size: 24rpx;
    color: #999;
    font-family: PingFangSC-Regular;
}

.card-101 {
    display: flex;
    align-items: center;
    width: 100%;
    box-sizing: border-box;
    padding: 0 20rpx;
    background: #fff;
    overflow: hidden;
    height: 70rpx;
}

.left-tag-img {
    width: 30rpx;
    height: 30rpx;
    margin-right: 16rpx;
}

.title-info {
    font-size: 32rpx;
}

.title-info-1 {
    white-space: nowrap;
    text-overflow: ellipsis;
    overflow: hidden;
    word-break: break-all;
}

.tag-img {
    width: 52rpx;
    height: 52rpx;
    margin-left: 10px;
}

.right-tag {
    position: absolute;
    right: 20rpx;
    color: #999;
}

.icon-right,.right-tag {
    font-size: 24rpx;
}

.card-102-desc {
    display: flex;
    align-items: center;
    width: 100%;
    box-sizing: border-box;
}

.card-102-desc-left {
    width: calc(100% - 216rpx);
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    height: 130rpx;
}

.card-102-desc-right {
    width: 196rpx;
    height: 130rpx;
    margin-left: 20rpx;
    border-radius: 3px;
    background: #ebebeb;
}

.card-expand-content {
    font-size: 28rpx;
    font-family: PingFangSC-Regular;
    color: #939393;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    overflow: hidden;
    line-height: 38rpx;
    margin-bottom: 6rpx;
}

.desc-info-vote {
    display: inline-block;
    margin-right: 20rpx;
    line-height: 36rpx;
    font-size: 22rpx;
    height: 36rpx;
}

.vote-img {
    height: 24rpx;
    width: 24rpx;
    position: relative;
    top: 2rpx;
}

.desc-info-tag {
    display: inline-block;
}