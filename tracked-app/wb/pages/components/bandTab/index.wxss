.band-tab {
    user-select: none;
    display: flex;
    flex-direction: column;
    box-sizing: border-box;
}

.band-tab,.channel-list {
    position: relative;
    width: 100%;
    height: 72rpx;
    line-height: 72rpx;
}

.channel-list {
    white-space: nowrap;
    overflow: hidden;
}

.band-tab-content {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-around;
    flex-wrap: nowrap;
    height: 100%;
    min-width: 100%;
    position: relative;
    white-space: nowrap;
    width: fit-content;
}

.channel-list-item-scroll {
    position: relative;
    width: 20%;
    color: #c2c2c2;
    display: inline-block;
    white-space: normal;
    text-align: center;
    font-size: 30rpx;
    -webkit-tap-highlight-color: rgba(0,0,0,0);
}

.channel-list-item {
    display: inline-flex;
    flex-direction: row;
    align-items: center;
    height: 72rpx;
    line-height: 72rpx;
}

.channel-name {
    width: 100%;
    text-align: center;
}

.band-tab-cur {
    width: 50rpx;
    height: 6rpx;
    position: absolute;
    bottom: 6rpx;
    left: 0;
    margin-left: -24rpx;
    background: linear-gradient(90deg,#fe8c00,#fe8200);
    border-radius: 50rpx;
}

.channel-name {
    font-family: PingFangSC-Regular;
    font-size: 30rpx;
    color: #939393;
}

.channel-name.cur {
    font-family: PingFangSC-Medium;
    color: #333;
    font-weight: 700;
    font-size: 31rpx;
}

.channel-list-item-scroll.today {
    width: 15%;
}

.today .channel-name.cur {
    font-size: 30rpx;
}