.container {
    position: fixed;
    top: 0;
    z-index: 100;
    left: 0;
    width: 100%;
}

.content {
    width: 500rpx;
    background: #FFF;
    margin: 200rpx auto 0;
}

.textarea {
    width: 100%;
}

.record {
    border-top: 1rpx solid #EFEFEF;
    text-align: center;
    padding: 20rpx 0;
}

.close-btn {
    text-align: center;
    margin: 20rpx 0;
}

.mask {
    position: fixed;
    background: rgba(0,0,0,.75);
    z-index: 99;
    width: 100%;
    height: 100%;
    top: 0;
    left: 0;
}

.view--hover {
    background: #EFEFEF;
}