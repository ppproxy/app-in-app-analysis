.table {
    display: table;
    table-layout: fixed;
    width: 100%;
}

.colgroup {
    display: table-column-group;
}

.col {
    display: table-column;
}

.thead {
    display: table-header-group;
}

.tbody {
    display: table-row-group;
}

.tr {
    display: table-row;
}

.th {
    display: table-cell;
    text-align: center;
    word-break: break-all;
}

.td {
    display: table-cell;
    text-align: center;
    word-break: break-all;
}

.border--top {
    position: relative;
}

.border--top::after {
    height: 1px;
    width: 100%;
    transform: scaleY(0.5);
    left: 0;
    right: 0;
    content: '';
    position: absolute;
    background-color: #ebebeb;
    top: 0;
}

.border--bottom {
    position: relative;
}

.border--bottom::after {
    height: 1px;
    width: 100%;
    transform: scaleY(0.5);
    left: 0;
    right: 0;
    content: '';
    position: absolute;
    background-color: #ebebeb;
    bottom: 0;
}

.border--left {
    position: relative;
}

.border--left::after {
    width: 100%;
    width: 1px;
    transform: scaleX(0.5);
    top: 0;
    bottom: 0;
    content: '';
    position: absolute;
    background-color: #ebebeb;
    left: 0;
}

.border--left {
    position: relative;
}

.border--left::after {
    width: 100%;
    width: 1px;
    transform: scaleX(0.5);
    top: 0;
    bottom: 0;
    content: '';
    position: absolute;
    background-color: #ebebeb;
    right: 0;
}

.search {
    font-size: 36rpx;
    line-height: 48rpx;
    padding: 14rpx 0;
    padding-left: 40rpx;
    padding-right: 40rpx;
    display: flex;
    flex-direction: row;
    justify-content: flex-start;
    align-items: center;
    border-bottom: 1px solid #ebebeb;
    border-color: #ebebeb;
}

.search__container {
    flex: 1;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    border: 1px solid #ebebeb;
    border-radius: 8rpx;
    background: #fafafa;
    padding-left: 20rpx;
    padding-right: 20rpx;
}

.search__icon {
    color: #909399;
    margin-right: 10rpx;
}

.search__text {
    color: #4293f4;
    margin-left: 30rpx;
}

.search__cancel {
    font-size: 34rpx;
    line-height: 46rpx;
    color: #4293f4;
    margin-left: 22rpx;
}

.search--focus {
    background: #fafafa;
}

.search--focus .search__input {
    background: #fafafa;
}

.search__input {
    width: 100%;
    border-color: #ebebeb;
    padding: 7rpx 20rpx 7rpx 10rpx;
    background: #fafafa;
}

.search__input--placeholder {
    font-size: 36rpx;
    line-height: 48rpx;
    color: #bbbec4;
}

.clear__icon {
    color: #7E7F86;
}