.row {
    display: flex;
    align-content: space-between;
    padding: 14rpx 43rpx;
}

.split-container {
    flex: 1;
    text-align: center;
    line-height: 80rpx;
    color: #353535;
    font-size: 30rpx;
}

.picker-container {
    background: #fff;
    border: 1rpx solid #d9d9d9;
    border-radius: 8rpx;
    flex: 3;
    box-sizing: border-box;
    text-align: center;
    width: 300rpx;
    height: 80rpx;
    line-height: 80rpx;
}

.picker-text {
    display: inline-block;
    position: relative;
    font-size: 28rpx;
    width: 240rpx;
    height: 80rpx;
    padding: 0rpx 30rpx;
    color: #333333;
}

.picker-container.placeholder {
    color: #b2b2b2;
}