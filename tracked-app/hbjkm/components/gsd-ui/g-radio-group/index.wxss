.table {
    display: table;
    table-layout: fixed;
    width: 100%;
}

.colgroup {
    display: table-column-group;
}

.col {
    display: table-column;
}

.thead {
    display: table-header-group;
}

.tbody {
    display: table-row-group;
}

.tr {
    display: table-row;
}

.th {
    display: table-cell;
    text-align: center;
    word-break: break-all;
}

.td {
    display: table-cell;
    text-align: center;
    word-break: break-all;
}

.border--top {
    position: relative;
}

.border--top::after {
    height: 1px;
    width: 100%;
    transform: scaleY(0.5);
    left: 0;
    right: 0;
    content: '';
    position: absolute;
    background-color: #ebebeb;
    top: 0;
}

.border--bottom {
    position: relative;
}

.border--bottom::after {
    height: 1px;
    width: 100%;
    transform: scaleY(0.5);
    left: 0;
    right: 0;
    content: '';
    position: absolute;
    background-color: #ebebeb;
    bottom: 0;
}

.border--left {
    position: relative;
}

.border--left::after {
    width: 100%;
    width: 1px;
    transform: scaleX(0.5);
    top: 0;
    bottom: 0;
    content: '';
    position: absolute;
    background-color: #ebebeb;
    left: 0;
}

.border--left {
    position: relative;
}

.border--left::after {
    width: 100%;
    width: 1px;
    transform: scaleX(0.5);
    top: 0;
    bottom: 0;
    content: '';
    position: absolute;
    background-color: #ebebeb;
    right: 0;
}

.radio {
    display: hidden;
    position: absolute;
    left: -9999rpx;
}

.radio__item {
    display: flex;
    flex-direction: row;
    justify-content: flex-start;
    align-items: flex-start;
}

.radio__icon {
    margin-right: 20rpx;
}

.radio__icon--checked {
    color: #4293f4;
}

.radio__icon--unchecked {
    border: 1px solid #ebebeb;
    border-radius: 8rpx;
    width: 48rpx;
    height: 48rpx;
    line-height: 48rpx;
    border-radius: 50%;
    box-sizing: border-box;
    border-color: #bbbec4;
    background: #fafafa;
}

.radio__label {
    flex: 1;
    margin-right: 20rpx;
}

.radio__label__text {
    font-size: 36rpx;
    line-height: 44rpx;
}

.radio__label__desc {
    font-size: 28rpx;
    line-height: 38rpx;
    color: #909399;
    margin-top: 6rpx;
}

.check__type--info {
    color: #4293f4;
}

.check__container {
    display: flex;
    flex-direction: row;
    justify-content: flex-start;
    align-items: flex-start;
    -webkit-align-items: stretch;
    align-items: stretch;
}

.check__container__label {
    flex: 1;
}

.check__container__icon {
    margin-right: 40rpx;
    position: relative;
    box-sizing: border-box;
    padding-top: 36rpx;
}

.check__container__icon::after {
    height: 1px;
    width: 100%;
    transform: scaleY(0.5);
    left: 0;
    right: 0;
    content: '';
    position: absolute;
    background-color: #ebebeb;
    bottom: 0;
}

.form-item {
    margin-right: 0!important;
}