.table {
    display: table;
    table-layout: fixed;
    width: 100%;
}

.colgroup {
    display: table-column-group;
}

.col {
    display: table-column;
}

.thead {
    display: table-header-group;
}

.tbody {
    display: table-row-group;
}

.tr {
    display: table-row;
}

.th {
    display: table-cell;
    text-align: center;
    word-break: break-all;
}

.td {
    display: table-cell;
    text-align: center;
    word-break: break-all;
}

.border--top {
    position: relative;
}

.border--top::after {
    height: 1px;
    width: 100%;
    transform: scaleY(0.5);
    left: 0;
    right: 0;
    content: '';
    position: absolute;
    background-color: #ebebeb;
    top: 0;
}

.border--bottom {
    position: relative;
}

.border--bottom::after {
    height: 1px;
    width: 100%;
    transform: scaleY(0.5);
    left: 0;
    right: 0;
    content: '';
    position: absolute;
    background-color: #ebebeb;
    bottom: 0;
}

.border--left {
    position: relative;
}

.border--left::after {
    width: 100%;
    width: 1px;
    transform: scaleX(0.5);
    top: 0;
    bottom: 0;
    content: '';
    position: absolute;
    background-color: #ebebeb;
    left: 0;
}

.border--left {
    position: relative;
}

.border--left::after {
    width: 100%;
    width: 1px;
    transform: scaleX(0.5);
    top: 0;
    bottom: 0;
    content: '';
    position: absolute;
    background-color: #ebebeb;
    right: 0;
}

.upload {
    margin-left: 40rpx;
    margin-right: 40rpx;
    padding-top: 37rpx;
    padding-bottom: 42rpx;
    position: relative;
}

.upload::after {
    height: 1px;
    width: 100%;
    transform: scaleY(0.5);
    left: 0;
    right: 0;
    content: '';
    position: absolute;
    background-color: #ebebeb;
    bottom: 0;
}

.upload__label {
    font-size: 36rpx;
    line-height: 40rpx;
    margin-bottom: 24rpx;
}

.upload__container {
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
}

.upload__image__container {
    background: #fafafa;
    border: 1px solid #ebebeb;
    border-radius: 8rpx;
    border-radius: 8rpx;
    height: 333rpx;
    width: 320rpx;
    position: relative;
    overflow: hidden;
}

.upload__image__container--uploaded {
    background: #FFF;
    border: none;
}

.upload__image {
    width: 320rpx;
}

.upload__image__background {
    width: 320rpx;
}

.upload__add__icon {
    width: 96rpx;
    height: 96rpx;
    position: absolute;
    left: 50%;
    top: 50%;
    transform: translate(-48rpx,-48rpx);
}

.upload__delete__icon,.upload__preview__icon {
    width: 44rpx;
    height: 48rpx;
}

.upload__delete__icon {
    margin-right: 85rpx;
}

.upload__preview__icon {
    margin-left: 85rpx;
}