.table {
    display: table;
    table-layout: fixed;
    width: 100%;
}

.colgroup {
    display: table-column-group;
}

.col {
    display: table-column;
}

.thead {
    display: table-header-group;
}

.tbody {
    display: table-row-group;
}

.tr {
    display: table-row;
}

.th {
    display: table-cell;
    text-align: center;
    word-break: break-all;
}

.td {
    display: table-cell;
    text-align: center;
    word-break: break-all;
}

.border--top {
    position: relative;
}

.border--top::after {
    height: 1px;
    width: 100%;
    transform: scaleY(0.5);
    left: 0;
    right: 0;
    content: '';
    position: absolute;
    background-color: #ebebeb;
    top: 0;
}

.border--bottom {
    position: relative;
}

.border--bottom::after {
    height: 1px;
    width: 100%;
    transform: scaleY(0.5);
    left: 0;
    right: 0;
    content: '';
    position: absolute;
    background-color: #ebebeb;
    bottom: 0;
}

.border--left {
    position: relative;
}

.border--left::after {
    width: 100%;
    width: 1px;
    transform: scaleX(0.5);
    top: 0;
    bottom: 0;
    content: '';
    position: absolute;
    background-color: #ebebeb;
    left: 0;
}

.border--left {
    position: relative;
}

.border--left::after {
    width: 100%;
    width: 1px;
    transform: scaleX(0.5);
    top: 0;
    bottom: 0;
    content: '';
    position: absolute;
    background-color: #ebebeb;
    right: 0;
}

.g-upload {
    margin-top: 7rpx;
}

.g-upload__container {
    display: flex;
    flex-wrap: wrap;
}

.g-upload__file {
    position: relative;
    margin-right: 21rpx;
    margin-top: 14rpx;
}

.g-upload__file:nth-of-type(4n) {
    margin-right: 0;
}

.g-upload__close {
    width: 40rpx;
    height: 40rpx;
    line-height: 40rpx;
    position: absolute;
    right: -14rpx;
    top: -14rpx;
    color: #7E7F86;
    z-index: 2;
}

.g-upload__file__mask {
    width: 150rpx;
    height: 150rpx;
    line-height: 150rpx;
    border: 1px solid #ebebeb;
    border-radius: 8rpx;
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    font-size: 30rpx;
    line-height: 40rpx;
    box-sizing: border-box;
    position: absolute;
    top: 0;
    left: 0;
    background-color: rgba(0,0,0,0.6);
    color: #fff;
    z-index: 1;
}

.g-upload__img {
    width: 150rpx;
    height: 150rpx;
    line-height: 150rpx;
    border: 1px solid #ebebeb;
    border-radius: 8rpx;
    box-sizing: border-box;
    border-color: transparent;
}

.g-upload__input-box {
    width: 150rpx;
    height: 150rpx;
    line-height: 150rpx;
    border: 1px solid #ebebeb;
    border-radius: 8rpx;
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    margin-top: 14rpx;
    box-sizing: border-box;
    color: #4293f4;
    border-color: #ccc;
    background-color: #fff;
}