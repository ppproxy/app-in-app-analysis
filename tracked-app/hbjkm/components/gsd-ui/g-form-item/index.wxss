.table {
    display: table;
    table-layout: fixed;
    width: 100%;
}

.colgroup {
    display: table-column-group;
}

.col {
    display: table-column;
}

.thead {
    display: table-header-group;
}

.tbody {
    display: table-row-group;
}

.tr {
    display: table-row;
}

.th {
    display: table-cell;
    text-align: center;
    word-break: break-all;
}

.td {
    display: table-cell;
    text-align: center;
    word-break: break-all;
}

.border--top {
    position: relative;
}

.border--top::after {
    height: 1px;
    width: 100%;
    transform: scaleY(0.5);
    left: 0;
    right: 0;
    content: '';
    position: absolute;
    background-color: #ebebeb;
    top: 0;
}

.border--bottom {
    position: relative;
}

.border--bottom::after {
    height: 1px;
    width: 100%;
    transform: scaleY(0.5);
    left: 0;
    right: 0;
    content: '';
    position: absolute;
    background-color: #ebebeb;
    bottom: 0;
}

.border--left {
    position: relative;
}

.border--left::after {
    width: 100%;
    width: 1px;
    transform: scaleX(0.5);
    top: 0;
    bottom: 0;
    content: '';
    position: absolute;
    background-color: #ebebeb;
    left: 0;
}

.border--left {
    position: relative;
}

.border--left::after {
    width: 100%;
    width: 1px;
    transform: scaleX(0.5);
    top: 0;
    bottom: 0;
    content: '';
    position: absolute;
    background-color: #ebebeb;
    right: 0;
}

.form-item.form-item--warn {
    padding-bottom: 10rpx;
}

.form-item__status-message--warn {
    font-size: 30rpx;
    line-height: 40rpx;
    margin-top: 10rpx;
}

.form-item {
    margin-left: 40rpx;
    margin-right: 40rpx;
    padding-top: 36rpx;
    padding-bottom: 36rpx;
    position: relative;
}

.form-item::after {
    height: 1px;
    width: 100%;
    transform: scaleY(0.5);
    left: 0;
    right: 0;
    content: '';
    position: absolute;
    background-color: #ebebeb;
    bottom: 0;
}

.form-item.form-item--warn {
    border-bottom-color: #f13939;
}

.form-item__label {
    font-size: 30rpx;
    line-height: 40rpx;
    margin-bottom: 6rpx;
}

.form-item__label--required {
    color: #f13939;
}

.form-item__wrap--disabled {
    opacity: 0.3;
}

.form-item__status-message {
    padding-left: 40rpx;
    padding-right: 40rpx;
}

.form-item__status-message--warn {
    color: #f13939;
}