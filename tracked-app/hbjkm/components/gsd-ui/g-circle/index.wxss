.table {
    display: table;
    table-layout: fixed;
    width: 100%;
}

.colgroup {
    display: table-column-group;
}

.col {
    display: table-column;
}

.thead {
    display: table-header-group;
}

.tbody {
    display: table-row-group;
}

.tr {
    display: table-row;
}

.th {
    display: table-cell;
    text-align: center;
    word-break: break-all;
}

.td {
    display: table-cell;
    text-align: center;
    word-break: break-all;
}

.border--top {
    position: relative;
}

.border--top::after {
    height: 1px;
    width: 100%;
    transform: scaleY(0.5);
    left: 0;
    right: 0;
    content: '';
    position: absolute;
    background-color: #ebebeb;
    top: 0;
}

.border--bottom {
    position: relative;
}

.border--bottom::after {
    height: 1px;
    width: 100%;
    transform: scaleY(0.5);
    left: 0;
    right: 0;
    content: '';
    position: absolute;
    background-color: #ebebeb;
    bottom: 0;
}

.border--left {
    position: relative;
}

.border--left::after {
    width: 100%;
    width: 1px;
    transform: scaleX(0.5);
    top: 0;
    bottom: 0;
    content: '';
    position: absolute;
    background-color: #ebebeb;
    left: 0;
}

.border--left {
    position: relative;
}

.border--left::after {
    width: 100%;
    width: 1px;
    transform: scaleX(0.5);
    top: 0;
    bottom: 0;
    content: '';
    position: absolute;
    background-color: #ebebeb;
    right: 0;
}

.circle {
    text-align: center;
    display: inline-block;
    width: 70rpx;
    height: 70rpx;
    line-height: 70rpx;
}

.circle__wrapper {
    position: relative;
    width: 100%;
    height: 100%;
}

.circle__wrapper__left,.circle__wrapper__right {
    width: 36rpx;
    height: 74rpx;
    position: absolute;
    top: 0;
    overflow: hidden;
}

.circle__wrapper__left {
    left: 0;
}

.circle__wrapper__right {
    right: 0;
}

.circle__left,.circle__right {
    position: absolute;
    top: 0;
    width: 65rpx;
    height: 65rpx;
    line-height: 65rpx;
    border-radius: 50%;
    border: 5rpx solid transparent;
    z-index: 9;
}

.circle__left {
    left: 0;
    border-left: 5rpx solid #4293f4;
    border-bottom: 5rpx solid #4293f4;
}

.circle__right {
    right: 0;
    border-top: 5rpx solid #4293f4;
    border-right: 5rpx solid #4293f4;
}

.circle__background {
    width: 63rpx;
    height: 65rpx;
    border-radius: 50%;
    border: 5rpx solid #ddd;
    position: absolute;
    top: 0;
    z-index: 1;
}

.circle__text {
    font-size: 36rpx;
    line-height: 48rpx;
    width: 70rpx;
    height: 70rpx;
    line-height: 70rpx;
    text-align: center;
    color: #4293f4;
    position: absolute;
    z-index: 10;
}