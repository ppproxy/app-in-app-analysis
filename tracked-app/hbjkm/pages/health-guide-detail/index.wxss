.browse {
    position: fixed;
    top: 85%;
    color: #ffffff;
    right: 10rpx;
    width: 160rpx;
    height: 160rpx;
    background-color: #01ab83;
    border-radius: 50%;
    text-align: center;
    line-height: 140rpx;
    z-index: 2;
    transition: all 0.3s linear;
    opacity: 0.7;
}

.arrow-position {
    position: absolute;
    top: 35%;
}

.arrow-left {
    left: 1%;
}

.arrow-right {
    right: 1%;
}

.arrow-close {
    left: 40%;
}

.browse.active {
    background-color: #01ab83;
    width: 160rpx;
    height: 160rpx;
}