.answer {
    padding: 0 20px;
    box-sizing: border-box;
}

.img image {
    width: 10px;
    height: 10px;
    float: right;
}

.line {
    border-bottom: 0.5px #f2f2f2 solid;
    display: flex;
    flex-direction: column;
    padding: 15px 0;
    box-sizing: border-box;
    line-height: 18px;
    font-size: 16px;
}

.top {
    display: flex;
}

.img {
    width: 30px;
    display: flex;
    align-items: center;
    justify-content: center;
}

.question {
    flex: 1;
}

.bottom {
    padding-top: 15px;
    box-sizing: border-box;
}

.bottom image {
    width: 100%;
}