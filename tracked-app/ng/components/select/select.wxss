.select-box {
    font-size: 30rpx;
}

.select-box,.select-current {
    position: relative;
    width: 100%;
}

.select-current {
    padding: 0 10rpx;
    line-height: 70rpx;
    border: 1rpx solid #ddd;
    border-radius: 6rpx;
    box-sizing: border-box;
}

.select-current::after {
    position: absolute;
    display: block;
    right: 16rpx;
    top: 30rpx;
    content: "";
    width: 0;
    height: 0;
    border: 10rpx solid transparent;
    border-top-color: #999;
}

.current-name {
    display: block;
    width: 85%;
    height: 100%;
    word-wrap: normal;
    overflow: hidden;
}

.option-list {
    position: absolute;
    left: 0;
    top: 76rpx;
    width: 100%;
    padding: 12rpx 20rpx 10rpx;
    border-radius: 6rpx;
    box-sizing: border-box;
    z-index: 99;
    box-shadow: inset 0rpx 0rpx 1rpx 1rpx rgba(0,0,0,.2);
    background-color: #fff;
}

.option {
    display: block;
    width: 100%;
    line-height: 70rpx;
    border-bottom: 1rpx solid #eee;
}

.option:last-child {
    border-bottom: none;
    padding-bottom: 0;
}