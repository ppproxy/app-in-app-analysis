.hidden {
    display: none;
}

.tr {
    display: flex;
    width: 100%;
    height: 2rem;
    align-items: center;
}

.td,.tr {
    justify-content: center;
}

.td {
    width: 40%;
    text-align: center;
}

.bg-w,.td {
    font-size: 30rpx;
}

.bg-w {
    background: snow;
}

.bg-g {
    font-size: 30rpx;
    background: #e6f3f9;
}

.th {
    width: 40%;
    justify-content: center;
    background: #af1616;
    color: #fff;
    display: flex;
    height: 2rem;
    align-items: center;
    font-size: 32rpx;
}

.navView,.th {
    font-weight: 700;
}

.navView {
    font-size: 38rpx;
    background-color: #fff;
    color: #af1616;
    padding: 5% 0 5% 5%;
    border-bottom: 2rpx solid #af1616;
    border-top: 2rpx solid #af1616;
}