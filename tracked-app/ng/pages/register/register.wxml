<view class="container">
    <form catchreset="formReset" catchsubmit="formSubmit">
        <view class="page-section">
            <view class="weui-cell weui-cell_input">
                <view class="weui-cell__bd">
                    <input class="weui-input" id="realName" name="realName" placeholder="姓名"></input>
                </view>
            </view>
            <view class="weui-cell weui-cell_input">
                <view class="weui-cell__bd">
                    <input class="weui-input" id="phoneNumber" maxlength="11" name="phoneNumber" placeholder="手机号"></input>
                </view>
            </view>
            <view class="select-wrap">
                <text class="bumen">部门</text>
                <select bind:change="change" id="select" key="department_id" options="{{options}}" style="width:86%;border:2rpx solid #af1616;" text="department_name"></select>
            </view>
            <view class="weui-cell weui-cell_input">
                <view class="weui-cell__bd">
                    <input class="weui-input" id="password" name="password" placeholder="密码"></input>
                </view>
            </view>
            <view class="weui-cell weui-cell_input">
                <view class="weui-cell__bd">
                    <input class="weui-input" id="repassword" name="repassword" placeholder="确认密码"></input>
                </view>
            </view>
            <view class="weui-cell weui-cell_input">
                <view class="weui-cell__bd">
                    <input class="weui-input" id="inviteCode" name="inviteCode" placeholder="邀请码"></input>
                </view>
            </view>
        </view>
        <view class="button-area">
            <button formType="submit" type="primary">提交</button>
        </view>
    </form>
</view>
