<view>
    <view class="section__ctn">
        <image src="{{avatarUrl}}"></image>
    </view>
    <view class="nickname">
        <text>{{nickName}}</text>
    </view>
    <view class="my_center">
        <view class="center_top">
            <view class="center_top_item">
                <view class="dou">
                    姓名
                </view>
                <text>
                    {{realName}}
                </text>
            </view>
            <view class="center_top_item">
                <view class="dou">
                    部门
                </view>
                <text>
                    {{department}}
                </text>
            </view>
            <view class="center_top_item">
                <view class="dou">
                    工种
                </view>
                <text>
                    {{workType}}
                </text>
            </view>
        </view>
        <view class="center_top">
            <view class="center_top_item">
                <view class="dou">
                    分数
                </view>
                <text>
                    {{score}}
                </text>
            </view>
            <view class="center_top_item">
                <view class="dou">
                    段位
                </view>
                <text>
                    {{level}}
                </text>
            </view>
            <view class="center_top_item">
                <view class="dou">
                    排名
                </view>
                <view class="soc">
                    <text style="display:block;margin-top:30%;" wx:if="{{rank==-1}}">暂无</text>
                    <text style="display:block;margin-top:30%;" wx:else>{{rank}}</text>
                </view>
            </view>
        </view>
    </view>
    <button bindtap="updateUserInfo" class="btn_class" type="warn">修改信息</button>
</view>
