checkbox .wx-checkbox-input {
    width: 40rpx;
    height: 40rpx;
    border: 4rpx solid #333;
    border-radius: 50%;
    background: none;
}

checkbox .wx-checkbox-input.wx-checkbox-input-checked {
    border: 4rpx solid #af1616!important;
    background-color: #fff!important;
}

checkbox .wx-checkbox-input.wx-checkbox-input-checked::before {
    width: 60%;
    height: 60%;
    background: #af1616;
    border-radius: 50%;
    content: "";
    transform: translate(-50%,-50%) scale(1);
}

radio .wx-radio-input {
    width: 40rpx;
    height: 40rpx;
    border: 4rpx solid #333;
    border-radius: 50%;
    background: none;
}

radio .wx-radio-input.wx-radio-input-checked {
    border: 4rpx solid #af1616!important;
    background-color: #fff!important;
}

radio .wx-radio-input.wx-radio-input-checked::before {
    width: 60%;
    height: 60%;
    background: #af1616;
    border-radius: 50%;
    content: "";
    transform: translate(-50%,-50%) scale(1);
}

.title {
    color: #333;
    font-size: 32rpx;
}

.question_all {
    width: 90%;
    margin: 5% auto;
    border: 2rpx solid #af1616;
    border-radius: 25rpx;
    box-shadow: 0rpx 10rpx 30rpx 10rpx #999;
}

.question_type {
    width: 100%;
    height: 90rpx;
    line-height: 90rpx;
    background-color: #af1616;
    color: #fff;
    border-radius: 25rpx 25rpx 0 0;
}

.question_type text {
    margin: 3%;
    font-size: 36rpx;
    font-weight: 700;
}

.answer,.question {
    width: 90%;
    margin: 3%;
    font-size: 32rpx;
    color: #333;
}

.answer view {
    margin-top: 2%;
}

.submit {
    margin: 8% 0;
}

.clock {
    display: block;
    text-align: center;
    font-size: 38rpx;
    color: #af1616;
    margin-top: 3%;
}

.summary_all {
    width: 85%;
    border-radius: 25rpx;
    border: 2rpx solid #af1616;
    box-shadow: 0rpx 3rpx 10rpx 3rpx #999;
    margin: 8% auto;
}

.summary_soc {
    width: 100%;
    border-radius: 25rpx 25rpx 0 0;
    margin: 0 auto;
    background-color: #af1616;
    color: #fff;
    font-weight: 700;
    text-align: center;
    line-height: 150rpx;
}

.summary_top {
    width: 100%;
    display: flex;
    justify-content: center;
}

.summary {
    width: 50%;
    font-size: 32rpx;
    margin: 5%;
    color: #af1616;
}

.buttonGroup {
    margin: 12%;
}

.button {
    margin: 5%;
}