.custom-search-input-wrap {
    z-index: 300;
    display: flex;
    align-items: center;
    justify-self: flex-start;
    width: 100vw;
    padding-right: 100px;
    padding-left: 17px;
    background: #fff;
    font-size: 0;
}

.custom-search-input-content {
    display: flex;
    align-items: center;
    width: 100%;
    height: 32px;
    padding-left: 10px;
    border-radius: 16px;
    background: #f2f2f2;
}

.custom-search-input-icon {
    width: 24px;
    height: 24px;
}

.custom-search-text {
    display: flex;
    align-items: center;
    margin-left: 5px;
    color: #999;
    font-size: 13px;
}