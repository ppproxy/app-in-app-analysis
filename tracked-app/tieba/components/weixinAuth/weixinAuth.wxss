.wx-auth-mask {
    position: fixed;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    z-index: 1000;
    width: 100%;
    background: rgba(0,0,0,.65);
}

button {
    margin: 0;
    padding: 0;
    border: none;
    background-color: #fff;
    font-size: 28rpx;
    line-height: 1;
}

button::after {
    border: none;
}

.wx-auth-modal {
    position: absolute;
    top: 50%;
    left: 50%;
    overflow: hidden;
    width: 582rpx;
    border-radius: 8rpx;
    background: #fff;
    transform: translate(-50%,-50%);
}

.auth {
    width: 100%;
    height: 96rpx;
    margin: 0 auto;
    border: 1rpx solid #e8e8e8;
    border-radius: 0;
    background: #fff;
    color: #2bb922;
    font-size: 16px;
    font-family: PingFangSC-Regular;
    line-height: 96rpx;
    text-align: center;
}

.hover-class {
    background: #f2f2f2;
}

.title {
    color: #000;
    font-size: 18px;
    font-family: PingFangSC-Medium;
    line-height: 18px;
    letter-spacing: 0;
    text-align: center;
}

.content {
    color: #000;
    font-size: 16px;
    font-family: PingFangSC-Regular;
    line-height: 16px;
    text-align: center;
}

.txt {
    margin-top: 22rpx;
    color: #a8a8a8;
    font-size: 13px;
    font-family: PingFangSC-Regular;
    line-height: 13px;
    text-align: center;
}

.agreement {
    margin-top: 22rpx;
    margin-bottom: 24rpx;
    color: #000;
    font-size: 13px;
    text-align: center;
}

.agreement text {
    color: #7559ff;
}

.close {
    width: 57rpx;
    height: 57rpx;
    margin-left: 526rpx;
    background: url(data:image/png;base64,) no-repeat left bottom;
    background-size: 24rpx;
}

.tb-logo {
    width: 80rpx;
    height: 80rpx;
    margin: 40rpx auto 22rpx;
    margin-left: 250rpx;
}