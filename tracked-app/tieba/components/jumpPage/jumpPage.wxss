.mask {
    position: fixed;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    z-index: 300;
    background-color: rgba(0,0,0,.65);
}

.jump-dialog-wrap {
    position: fixed;
    top: 50%;
    right: 22px;
    left: 22px;
    z-index: 300;
    overflow: hidden;
    border-radius: 4px;
    background-color: #fff;
    font-size: 0;
    transform: translateY(-50%);
}

.jump-dialog-wrap .page-num-wrap {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 100%;
    margin: 30px 0;
    color: #545454;
    font-size: 17px;
    line-height: 17px;
}

.jump-dialog-wrap .page-num-wrap .page-num-input {
    flex-grow: 0;
    flex-shrink: 0;
    width: 50px;
    color: #7559ff;
    text-align: center;
}

.jump-dialog-wrap .page-num-wrap .page-num {
    display: flex;
    align-items: center;
    justify-content: center;
}

.jump-dialog-wrap .current-page-info {
    height: 12px;
    margin: 10px auto 30px;
    color: #999;
    font-size: 12px;
    line-height: 12px;
    text-align: center;
}

.dialog-btn-wrap {
    display: flex;
    height: 95rpx;
    line-height: 95rpx;
}

.dialog-btn-wrap .dialog-btn {
    flex-grow: 1;
    flex-shrink: 1;
    width: 50%;
    font-size: 18px;
    text-align: center;
}

.dialog-btn-wrap .dialog-submit {
    color: #7559ff;
}

.border-right {
    position: relative;
}

.border-right::after {
    content: "";
    position: absolute;
    top: 0;
    right: 0;
    bottom: 0;
    width: 1px;
    background: #f0f0f0;
    transform-origin: 100% 0;
}

.border-top {
    position: relative;
    border: 0;
}

.border-top::before {
    content: "";
    position: absolute;
    top: 0;
    right: 0;
    width: 100%;
    height: 1px;
    background: #f0f0f0;
    transform-origin: 0 0;
}

.video-dialog {
    top: 400px;
}