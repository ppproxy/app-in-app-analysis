.s-swiper {
    height: 76px;
}

.top-ties-container {
    position: relative;
}

.header-top-ties {
    justify-content: center;
}

.top-ties-wrap {
    position: absolute;
    top: 0;
    width: 100%;
    padding: 0 17px;
}

.top-ties-con {
    width: 100%;
    padding: 0 22px;
    border-radius: 8px;
    background: #fff;
    color: #333;
    box-shadow: 0 2px 6px 0 rgba(0,0,0,.08);
    font-size: 13px;
}

.top-ties-item {
    position: relative;
    display: flex;
    align-items: center;
    height: 38px;
}

.top-ties-item-one {
    display: flex;
    align-items: center;
    height: 76px;
}

.tie-text {
    flex: 1;
    overflow: hidden;
    margin-left: 10px;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.frs-topforum-legend {
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 8px 0 7px 0;
    background: #f5f5f5;
}

.topforum-legend-item {
    position: relative;
    width: 15px;
    height: 2px;
    background: #bbb;
}

.topforum-legend-item:nth-child(1) {
    border-top-left-radius: 8px;
    border-bottom-left-radius: 8px;
}

.topforum-legend-item:last-child {
    border-top-right-radius: 8px;
    border-bottom-right-radius: 8px;
}

.legend-item-active {
    position: absolute;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    border-radius: 3px;
    background: #666;
}

.border-bottom {
    position: relative;
    border: 0;
}

.border-bottom::after {
    content: "";
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 1px;
    background: #f5f5f5;
}