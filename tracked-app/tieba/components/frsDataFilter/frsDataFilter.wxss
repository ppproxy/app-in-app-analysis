.content-filter-wrap {
    z-index: 300;
    width: 100%;
    background: #f5f5f5;
}

.content-filter {
    display: flex;
    align-items: center;
    height: 40px;
    padding: 0 17px;
    color: #555;
    box-shadow: 0 0 0 0 #f2f2f2;
    font-size: 15px;
}

.filter-item {
    margin-right: 24px;
}

.filter-active {
    color: #000;
    font-weight: bold;
    font-size: 18px;
}

.content-filter-time {
    position: relative;
    display: flex;
    align-items: center;
    justify-content: space-between;
    height: 36px;
    padding: 0 17px;
    padding-top: 3px;
    color: #555;
    font-size: 13px;
}

.content-filter-time-flag {
    display: flex;
    align-items: center;
}

.filter-flag-wrap {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 12px;
    height: 12px;
    margin-left: 4px;
}

.filter-flag-down {
    width: 100%;
    height: 100%;
}

.select-comp-wrap {
    position: fixed;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    z-index: 300;
    display: flex;
    align-items: center;
    justify-content: center;
    background: #000;
    opacity: .3;
}

.select-comp-container {
    position: absolute;
    top: 32px;
    right: 17px;
    z-index: 300;
    display: flex;
    flex-direction: column;
    width: 102px;
    border-radius: 8px;
    background: #fff;
    color: #545454;
    box-shadow: 0 0 6px 0 rgba(0,0,0,.08);
    font-size: 13px;
}

.select-item {
    display: flex;
    width: 100%;
    padding: 10px 12px;
}

.fontcolor {
    color: #7559ff;
}

.border-bottom {
    position: relative;
    border: 0;
}

.border-bottom::after {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    box-sizing: border-box;
    width: 200%;
    height: 200%;
    border-bottom: 1px solid #f2f2f2;
    transform: scale(.5,.5);
    transform-origin: 0;
}

.select-border-bottom {
    border-bottom: 1px solid #f2f2f2;
}

.filter-mask {
    position: fixed;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    z-index: 100;
    background: #fff;
    opacity: 0;
}