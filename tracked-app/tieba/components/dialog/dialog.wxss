.mask {
    position: fixed;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    z-index: 300;
    background-color: rgba(0,0,0,.65);
}

.dialog-wrap {
    position: fixed;
    top: 100px;
    right: 22px;
    left: 22px;
    z-index: 300;
    overflow: hidden;
    border-radius: 4px;
    background-color: #fff;
    font-size: 0;
}

.dialog-wrap .title {
    display: block;
    margin: 28px auto 0;
    color: #000;
    font-size: 20px;
    line-height: 20px;
    text-align: center;
}

.dialog-wrap .sub-title {
    display: block;
    margin: 24px auto 0;
    padding: 0 27px;
    color: #999;
    font-size: 16px;
    line-height: 22px;
    text-align: center;
}

.dialog-btn-wrap {
    display: flex;
    height: 95rpx;
}

.dialog-btn-wrap .dialog-btn {
    flex-grow: 1;
    flex-shrink: 1;
    width: 50%;
    font-size: 18px;
    line-height: 47.5px;
    text-align: center;
}

.dialog-btn-wrap .dialog-submit {
    color: #7559ff;
}

.border-right {
    position: relative;
}

.border-right::after {
    content: "";
    position: absolute;
    top: 0;
    right: 0;
    bottom: 0;
    width: 1px;
    background: #f0f0f0;
    transform-origin: 100% 0;
}

.border-bottom {
    position: relative;
    border: 0;
}

.border-bottom::after {
    content: "";
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 1px;
    background: #f0f0f0;
    transform-origin: 0 100%;
}

.video-dialog {
    top: 300px;
}