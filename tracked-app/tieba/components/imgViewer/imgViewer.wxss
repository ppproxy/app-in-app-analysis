.img-viewer {
    width: 100%;
    height: 100%;
}

.img-viewer .img-viewer-pics {
    width: 100%;
    height: 100%;
}

.img-viewer .img-icon {
    position: absolute;
    right: 5px;
    bottom: 5px;
    z-index: 2;
    display: flex;
    align-items: center;
    height: 20px;
    padding: 0 9px;
    border-radius: 10px;
    background-color: rgba(0,0,0,.5);
    color: #fff;
    font-size: 10px;
    line-height: 20px;
}

.img-viewer .img-icon .more-pics {
    width: 9px;
    height: 8px;
    background-color: transparent;
}

.img-viewer .img-icon .img-txt {
    margin-left: 3px;
    color: #fff;
}

.img-viewer-pics {
    background-color: #f5f5f5;
}