.weixin-share-frame {
    position: fixed;
    right: 0;
    bottom: 0;
    left: 0;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    border-radius: 12px 12px 0 0;
    background: #fff;
}

.IPX-bottom {
    padding-bottom: 34px;
}

.weixin-share-frame-title {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 100%;
    height: 50px;
    color: #000;
    font-size: 17px;
}

.close {
    position: absolute;
    top: 3px;
    right: 8px;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 44px;
    height: 44px;
    background: #fff;
}

.image-content {
    display: flex;
    justify-content: center;
    overflow: auto;
    width: 100%;
    margin: 11px 0;
    padding: 3px 0;
}

.weixin-share-frame-bottom {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 100%;
    height: 50px;
    color: #7559ff;
    font-size: 17px;
}

.weixin-share-frame-bottom-no {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 100%;
    height: 50px;
    color: #a8a8a8;
    font-size: 17px;
}

.border-top {
    position: relative;
    border: 0;
}

.border-top::before {
    content: "";
    position: absolute;
    top: 0;
    right: 0;
    width: 100%;
    height: 1px;
    background: #f0f0f0;
    transform-origin: 0 0;
}

.no-image {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    width: 207px;
    height: 100%;
    background: #f2f2f2;
}

.loading {
    width: 20px;
    height: 20px;
}

.loading-text {
    margin-top: 12px;
    color: #a8a8a8;
    font-size: 13px;
}

.share-pic {
    width: 207px;
    box-shadow: 0 0 4px 0 rgba(0,0,0,.3);
}