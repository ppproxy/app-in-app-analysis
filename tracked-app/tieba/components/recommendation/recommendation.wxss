./templates/sharecard/sharecard.wxssrpx.feed-recommendation-item {
    padding: 32rpx 22rpx 0;
}

.feed-recommendation-item .post-action {
    display: flex;
}

.feed-recommendation-item .user-info {
    display: flex;
    align-items: center;
    color: #000;
    font-size: 30rpx;
}

.feed-recommendation-item .user-info .user-avatar {
    overflow: hidden;
    width: 70rpx;
    height: 70rpx;
    margin-right: 24rpx;
    border-radius: 8px;
}

.user-info .forum-info {
    display: table;
    flex: 1;
}

.forum-name {
    display: table-row;
    color: #131314;
    font-size: 30rpx;
}

.feed-recommendation-item .post-info {
    margin: 24rpx 0;
    font-size: 30rpx;
}

.feed-recommendation-item .post-img {
    position: relative;
    overflow: hidden;
    width: 504rpx;
    height: 504rpx;
    border-radius: 8px;
    background-color: #f5f5f5;
}

.feed-recommendation-item .post-img.video-img {
    width: 100%;
    height: 428rpx;
}

.feed-recommendation-item .post-img .video-logo {
    position: absolute;
    top: 50%;
    left: 50%;
    width: 48px;
    height: 48px;
    transform: translate(-50%,-50%);
}

.feed-recommendation-item .post-img .video-info {
    position: absolute;
    right: 5px;
    bottom: 5px;
    display: inline-block;
    height: 20px;
    padding: 0 10px;
    border-radius: 10px;
    background-color: rgba(0,0,0,.5);
    color: #fff;
    font-size: 10px;
    line-height: 20px;
}

.feed-recommendation-item .ba-name {
    display: flex;
    margin: 16rpx 0;
    font-size: 0;
}

.feed-recommendation-item .ba-name-txt {
    display: flex;
    align-items: center;
    height: 22px;
    padding: 0 10px;
    border: 1rpx solid #7559ff;
    border-radius: 12px;
    color: #7559ff;
    font-size: 12px;
    line-height: 22px;
}

.feed-recommendation-item .ba-name-txt>image {
    width: 12px;
    height: 12px;
    margin-right: 4px;
}

.image {
    width: 100%;
    height: 100%;
}

.recommendation-forum-sub-txt {
    display: table-row;
    align-items: center;
    color: #a3a2a8;
    font-size: 24rpx;
}

.recommendation-jinba {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 136rpx;
    height: 58rpx;
    border-radius: 32rpx;
    background-color: rgba(117,89,255,.08);
    color: #7559ff;
    font-size: 26rpx;
}

.forum-name-icon {
    position: relative;
    top: 1px;
    display: inline-block;
    width: 14px;
    height: 14px;
    margin-left: 3px;
}

.recommendation-tag {
    color: #a3a2a8;
    font-size: 28rpx;
}

.interact {
    margin: 32rpx 0;
    color: #a3a2a8;
    font-size: 26rpx;
}

.work-recommendation-item {
    display: flex;
    justify-content: space-between;
    padding: 16rpx 26rpx;
}

.work-recommendation-item .left-box {
    flex: 1;
    margin: 14rpx 0;
}

.work-recommendation-item .right-box {
    position: relative;
    overflow: hidden;
    width: 248rpx;
    height: 166rpx;
    margin-left: 24rpx;
    border: 1rpx solid rgba(0,0,0,.12);
    border-radius: 16rpx;
    background: #f4f4f4;
}

.work-recommendation-item .headtitle {
    display: -webkit-box;
    overflow: hidden;
    color: #272829;
    font-size: 32rpx;
    line-height: 48rpx;
    text-overflow: ellipsis;
    word-wrap: break-word;
    word-break: break-all;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
}

.work-recommendation-item .subtitle {
    margin-top: 32rpx;
    color: #a8a8a8;
    font-size: 24rpx;
    line-height: 24rpx;
    text-align: left;
}

.work-recommendation-item .subtitle .reply-txt {
    margin-left: 24rpx;
}

.work-recommendation-item .image {
    width: 100%;
    height: 100%;
}

.small-image {
    position: absolute;
    top: 50%;
    left: 50%;
    width: 48px;
    height: 48px;
    transform: translate(-50%,-50%);
}

.feed-recommendation {
    background-color: #f5f5f5;
}

.feed-recommendation .recommendation-title {
    width: 100%;
    padding: 32rpx 0 24rpx 26rpx;
    background: #fff;
    color: #141414;
    font-size: 34rpx;
    font-family: PingFangSC-Medium;
    line-height: 34rpx;
}

.feed-recommendation .recommendation-A {
    border-top: 12rpx solid #f4f4f4;
}

.feed-recommendation .recommendation-B .recommendation-title {
    background: #f4f4f4;
}

.feed-recommendation .recommendation-item {
    overflow: hidden;
    margin: 8px;
    border-radius: 15px;
    background: #fff;
}

.feed-recommendation .recommendation-B .bottom-line {
    overflow: hidden;
    margin: 8px;
    border-radius: 15px;
    background: #fff;
}

.feed-recommendation .no-more {
    margin-top: 16rpx;
    padding: 30rpx 0;
    color: #a3a2a8;
    font-size: 26rpx;
    text-align: center;
}

.sticky-style {
    position: sticky;
    top: 0;
    z-index: 200;
}

.feed-recommendation .card-interact {
    margin: 5px 0;
    padding: 0 40px;
}

.feed-recommendation .card-interact>view:last-child,.feed-recommendation .card-interact>button:last-child {
}

.feed-recommendation .card-interact>view:first-child,.feed-recommendation .card-interact>button:first-child {
}

.feed-recommendation .card-interact .icon {
    display: block;
    width: 22px;
    height: 22px;
}

.feed-recommendation .card-interact .icon.share-icon {
    width: 22px;
    height: 22px;
}

.feed-recommendation .card-interact .icon.commont-icon {
    width: 22px;
    height: 22px;
}

.feed-recommendation .card-interact .icon.fabulous-icon {
    width: 22px;
    height: 22px;
}