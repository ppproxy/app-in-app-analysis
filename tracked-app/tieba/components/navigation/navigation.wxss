.custom-navigation {
    position: fixed;
    top: 0;
    z-index: 300;
    width: 100%;
    background: #fff;
    color: #fff;
    font-weight: bolder;
    font-size: 36rpx;
}

.icon-container {
    z-index: 300;
    display: flex;
}

.custom-navigation-content {
    position: relative;
    display: flex;
    align-items: center;
}

.custom-navigation-title {
    display: flex;
    align-items: center;
    justify-content: flex-start;
    width: 100%;
}

.navigation-title {
    position: absolute;
    top: 0;
    z-index: -1;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 100%;
    height: 100%;
}

.back-icon {
    width: 22px;
    height: 22px;
}

.back-icon-con {
    display: flex;
    align-items: center;
    justify-content: center;
    margin-right: 13px;
    padding-left: 17px;
}

.home-icon-con {
    display: flex;
    align-items: center;
    justify-content: center;
    padding-left: 17px;
}

.home-icon {
    width: 22px;
    height: 22px;
}

.custom-title-container {
    display: flex;
    align-items: center;
    justify-content: flex-start;
    width: 100%;
    height: 100%;
}

.navigation-input {
    display: flex;
    flex: 1;
    align-items: center;
    overflow: hidden;
    height: 36px;
    margin-right: 110px;
    margin-left: 15px;
    border-radius: 33px;
}

.navigation-search-btn {
    width: 18px;
    height: 18px;
    margin-right: 4px;
    margin-left: 8px;
}

.pb-btn {
    width: 24px;
    height: 24px;
}

.frs-placeholder {
    flex: 1;
    overflow: hidden;
    padding-right: 10px;
    color: #fff;
    font-weight: normal;
    font-size: 16px;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.pb-placeholder {
    flex: 1;
    overflow: hidden;
    padding-right: 10px;
    color: #a8a8a8;
    font-weight: normal;
    font-size: 16px;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.frs-input {
    background-color: rgba(255,255,255,.25);
}

.pb-input {
    background: #f2f2f2;
}

.margin-to-back {
    margin-left: 56px;
}