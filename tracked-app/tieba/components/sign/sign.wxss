.tieba-toast-wrap {
    position: fixed;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    z-index: 300;
    background: rgba(255,255,255,0);
    color: #ccc;
    text-align: center;
}

.tieba-toast-wrap .tieba-toast-content {
    display: inline-block;
    min-width: 131px;
    min-height: 86px;
    margin-top: 285px;
    border-radius: 5px;
    background: rgba(0,0,0,.8);
}

.tieba-toast-wrap .tieba-toast-content .tieba-tosat-img {
    width: 76px;
    height: 47px;
    margin-top: 19.5px;
}

.tieba-toast-wrap .tieba-toast-content .tieba-toast-title {
    display: block;
    margin: 10px 0 7px 0;
    color: #ccc;
    font-size: 16px;
}

.tieba-toast-wrap .tieba-toast-content .tieba-toast-desec {
    display: block;
    margin: 4px 0 8px 0;
    font-size: 12px;
}

.tieba-toast-wrap .tieba-toast-content .tieba-toast-level {
    height: 12px;
    font-size: 12px;
    line-height: 12px;
    text-align: center;
}

.tieba-toast-content .tieba-toast-level .current-level {
    float: left;
    margin-left: 17px;
}

.tieba-toast-content .tieba-toast-level .add-to-next-level {
    float: right;
    margin-right: 17px;
}

.tieba-toast-content .tieba-toast-level text {
    display: inline-block;
}

.tieba-toast-content .red-word {
    color: #f34f18;
}

.tieba-toast-content .tieba-toast-level .progress-wrap {
    position: relative;
    top: -2px;
    display: inline-block;
    width: 59px;
    height: 4px;
    margin: 0 6px 0 5px;
    border-radius: 2px;
    background: #ccc;
}

.tieba-toast-level .progress-wrap .progress {
    height: 4px;
    border-radius: 2px;
    background: #4a83f7;
}

.frs-header-btn {
    display: flex;
    align-items: center;
    justify-content: center;
    min-width: 57px;
    min-height: 28px;
    margin-left: 17px;
    padding: 0 9px;
    border-radius: 14px;
    font-size: 13px;
}

.sign-logo {
    width: 15px;
    height: 15px;
    margin-right: 6px;
}

.sign-btn {
    background: #fff;
    color: #333;
    opacity: .95;
}

.has-sign-btn {
    background: none;
    color: #fff;
    opacity: 1;
}

.normal-btn {
    background: #fff;
    color: #333;
    opacity: .95;
}