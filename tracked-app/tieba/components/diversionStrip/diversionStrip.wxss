.download-app {
    display: flex;
    align-items: center;
    justify-content: flex-start;
    width: 100%;
    height: 64px;
    padding-left: 17px;
    background: #fff;
}

.logo-png {
    width: 44px;
    height: 44px;
}

.download-text {
    flex: 1;
    margin-left: 6px;
    padding: 15px 0 14px 0;
    color: #141414;
    font-size: 13px;
}

.callApp {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 91px;
    height: 31px;
    margin: 0;
    margin-right: 17px;
    padding: 0;
    border-radius: 14px;
    background: rgba(117,89,225,.08);
    color: #7559ff;
    font-size: 13px!important;
}