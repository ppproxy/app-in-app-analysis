.mask {
    position: fixed;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    z-index: 1200;
    background-color: rgba(0,0,0,.65);
}

.action-sheet-wrap {
    position: fixed;
    bottom: 0;
    z-index: 300;
    width: 100%;
    background-color: #fff;
    color: #333;
    font-size: 16px;
    transform: translateY(100%);
}

.action-sheet-wrap .action-sheet-btn {
    height: 49px;
    line-height: 49px;
    text-align: center;
}

.border-bottom {
    position: relative;
    border: 0;
}

.border-bottom::after {
    content: "";
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 1px;
    background: #f0f0f0;
    transform-origin: 0 100%;
}

.hover-class {
    background-color: #f5f5f5;
}

.sort-active {
    color: #7559ff;
}

.cancel-sort {
    color: #545454;
}

.sheet-bottom-padding {
    padding-bottom: 34px;
}