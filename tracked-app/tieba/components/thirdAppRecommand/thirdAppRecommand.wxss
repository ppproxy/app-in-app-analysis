.third-app-recommand {
    overflow: hidden;
    margin-bottom: 6px;
    padding-top: 7px;
    border-top: 6px solid #f5f5f5;
    background-color: #fff;
}

.third-app-recommand-title {
    height: 40px;
    padding: 0 17px;
    font-size: 18px;
    font-family: PingFangSC-Medium;
    line-height: 40px;
}

.third-app-recommand-list {
    overflow: hidden;
    margin-top: -3px;
}

.third-app-recommand-card {
    display: flex;
    box-sizing: content-box;
    height: 82px;
    margin: 0 17px;
    padding: 17px 0;
    padding-bottom: 0;
    border-bottom: 1px solid #f0f0f0;
}

.third-app-recommand-card:first-child {
    margin-top: 11px;
    padding-top: 0;
}

.third-app-recommand-card:last-child {
    border-bottom: none;
}

.third-app-recommand-image-wrap {
    flex-shrink: 0;
    width: 94px;
    height: 63px;
    margin-top: 1px;
    margin-left: 10px;
    border-radius: 3px;
    box-shadow: inset 0 0 0 1px rgba(0,0,0,.08);
}

.third-app-recommand-content {
    flex-grow: 1;
    flex-shrink: 1;
    flex-direction: column;
    justify-content: space-between;
}

.third-app-recommand-content .recommand-title {
    display: -webkit-box;
    overflow: hidden;
    width: 100%;
    margin-top: -3px;
    color: #292929;
    font-size: 17px;
    text-overflow: ellipsis;
    word-break: break-all;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
}

.third-app-recommand-content .recommand-from {
    overflow: hidden;
    margin-top: 1px;
    color: #a8a8a8;
    font-size: 13px;
    text-overflow: ellipsis;
    white-space: nowrap;
    word-break: break-all;
}

.third-app-recommand-pics {
    position: relative;
    display: flex;
}

.third-app-recommand-video {
    position: absolute;
    top: 1px;
    left: 10px;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 94px;
    height: 63px;
    background-color: rgba(255,255,255,0);
}

.third-app-recommand-video-btn {
    width: 30px;
    height: 30px;
}