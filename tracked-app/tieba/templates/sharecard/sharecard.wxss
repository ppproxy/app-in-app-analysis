.card-interact {
    display: flex;
    align-items: center;
    justify-content: space-between;
    height: 40px;
    padding: 0 17px;
    background: #fff;
    font-size: 0;
}

.card-interact .right-btn {
    display: flex;
    align-items: center;
    justify-content: flex-end;
    padding: 0;
}

.card-interact>view,.card-interact>button {
    display: flex;
    align-items: center;
    margin: 0;
    padding: 0;
    line-height: 100%;
}

.card-interact .icon {
    display: block;
    width: 18px;
    height: 18px;
}

.card-interact .icon.share-icon {
    width: 18px;
    height: 18px;
}

.card-interact .icon.commont-icon {
    width: 18px;
    height: 18px;
}

.card-interact .icon.fabulous-icon {
    width: 18px;
    height: 18px;
}

.card-interact .num {
    margin-left: 7px;
    color: #333;
    font-size: 13px;
}

.card-interact .num.red {
    color: #ff392b;
}

button::after {
    border: none;
}