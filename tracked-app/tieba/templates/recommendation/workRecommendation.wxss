.work-recommendation-item {
    display: flex;
    justify-content: space-between;
    padding: 16rpx 26rpx;
}

.work-recommendation-item .left-box {
    flex: 1;
    margin: 14rpx 0;
}

.work-recommendation-item .right-box {
    position: relative;
    overflow: hidden;
    width: 248rpx;
    height: 166rpx;
    margin-left: 24rpx;
    border: 1rpx solid rgba(0,0,0,.12);
    border-radius: 16rpx;
    background: #f4f4f4;
}

.work-recommendation-item .headtitle {
    display: -webkit-box;
    overflow: hidden;
    color: #272829;
    font-size: 32rpx;
    line-height: 48rpx;
    text-overflow: ellipsis;
    word-wrap: break-word;
    word-break: break-all;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
}

.work-recommendation-item .subtitle {
    margin-top: 32rpx;
    color: #a8a8a8;
    font-size: 24rpx;
    line-height: 24rpx;
    text-align: left;
}

.work-recommendation-item .subtitle .reply-txt {
    margin-left: 24rpx;
}

.work-recommendation-item .image {
    width: 100%;
    height: 100%;
}

.small-image {
    position: absolute;
    top: 50%;
    left: 50%;
    width: 48px;
    height: 48px;
    transform: translate(-50%,-50%);
}