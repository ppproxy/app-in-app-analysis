./templates/sharecard/sharecard.wxssrpx.feed-recommendation-item {
    padding: 32rpx 22rpx 0;
}

.feed-recommendation-item .post-action {
    display: flex;
}

.feed-recommendation-item .user-info {
    display: flex;
    align-items: center;
    color: #000;
    font-size: 30rpx;
}

.feed-recommendation-item .user-info .user-avatar {
    overflow: hidden;
    width: 70rpx;
    height: 70rpx;
    margin-right: 24rpx;
    border-radius: 8px;
}

.user-info .forum-info {
    display: table;
    flex: 1;
}

.forum-name {
    display: table-row;
    color: #131314;
    font-size: 30rpx;
}

.feed-recommendation-item .post-info {
    margin: 24rpx 0;
    font-size: 30rpx;
}

.feed-recommendation-item .post-img {
    position: relative;
    overflow: hidden;
    width: 504rpx;
    height: 504rpx;
    border-radius: 8px;
    background-color: #f5f5f5;
}

.feed-recommendation-item .post-img.video-img {
    width: 100%;
    height: 428rpx;
}

.feed-recommendation-item .post-img .video-logo {
    position: absolute;
    top: 50%;
    left: 50%;
    width: 48px;
    height: 48px;
    transform: translate(-50%,-50%);
}

.feed-recommendation-item .post-img .video-info {
    position: absolute;
    right: 5px;
    bottom: 5px;
    display: inline-block;
    height: 20px;
    padding: 0 10px;
    border-radius: 10px;
    background-color: rgba(0,0,0,.5);
    color: #fff;
    font-size: 10px;
    line-height: 20px;
}

.feed-recommendation-item .ba-name {
    display: flex;
    margin: 16rpx 0;
    font-size: 0;
}

.feed-recommendation-item .ba-name-txt {
    display: flex;
    align-items: center;
    height: 22px;
    padding: 0 10px;
    border: 1rpx solid #7559ff;
    border-radius: 12px;
    color: #7559ff;
    font-size: 12px;
    line-height: 22px;
}

.feed-recommendation-item .ba-name-txt>image {
    width: 12px;
    height: 12px;
    margin-right: 4px;
}

.image {
    width: 100%;
    height: 100%;
}

.recommendation-forum-sub-txt {
    display: table-row;
    align-items: center;
    color: #a3a2a8;
    font-size: 24rpx;
}

.recommendation-jinba {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 136rpx;
    height: 58rpx;
    border-radius: 32rpx;
    background-color: rgba(117,89,255,.08);
    color: #7559ff;
    font-size: 26rpx;
}

.forum-name-icon {
    position: relative;
    top: 1px;
    display: inline-block;
    width: 14px;
    height: 14px;
    margin-left: 3px;
}

.recommendation-tag {
    color: #a3a2a8;
    font-size: 28rpx;
}

.interact {
    margin: 32rpx 0;
    color: #a3a2a8;
    font-size: 26rpx;
}