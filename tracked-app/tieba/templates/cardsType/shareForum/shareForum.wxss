.forum-small-app-pic-wrap {
    height: 263px;
    background-color: #f5f5f5;
}

.forum-small-app-pic-wrap .forum-small-app-pic-title-wrap {
    display: flex;
    align-items: center;
    height: 44px;
    padding: 0 8px;
}

.forum-small-app-pic-wrap .forum-small-app-pic-title-wrap .user-avatar-wrap {
    overflow: hidden;
    width: 28px;
    height: 28px;
    border: 1px solid #fff;
    border-radius: 14px;
}

.forum-small-app-pic-wrap .forum-small-app-pic-title-wrap .user-avatar-wrap .user-avatar {
    width: 100%;
    height: 100%;
}

.forum-small-app-pic-wrap .forum-small-app-pic-title-wrap .user-name {
    margin-left: 8px;
    color: #333;
    font-size: 14px;
}

.forum-small-app-pic-wrap .post-img-wrap {
    overflow: hidden;
    height: 181px;
    margin: 0 8px;
    background-color: #f5f5f5;
}

.forum-small-app-pic-wrap .post-img-wrap .post-img {
    width: 100%;
    height: 100%;
    box-shadow: inset 0 0 0 1px rgba(0,0,0,.04);
}

.forum-small-app-pic-wrap .small-app-logo-wrap {
    display: flex;
    align-items: center;
    height: 37px;
    padding: 0 8px;
}

.forum-small-app-pic-wrap .small-app-logo-wrap .logo-wrap {
    display: flex;
    overflow: hidden;
    width: 22px;
    height: 22px;
    border-radius: 11px;
}

.forum-small-app-pic-wrap .small-app-logo-wrap .logo-wrap .small-app-logo {
    width: 100%;
    height: 100%;
}

.forum-small-app-pic-wrap .small-app-logo-wrap .small-app-slogen {
    margin-left: 7.5px;
    color: #999;
    font-size: 13px;
}