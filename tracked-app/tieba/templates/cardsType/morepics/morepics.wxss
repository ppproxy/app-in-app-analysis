.more-pics-wrap {
    position: relative;
}

.multiple-image-content {
    display: flex;
    overflow: hidden;
}

.multiple-image-item {
    position: relative;
    border-radius: 8px;
}

.multiple-image-content .multiple-image-item image {
    display: flex;
    width: calc((100vw - 59px) / 3);
    height: calc((100vw - 59px) / 3);
}

.multiple-image-item:nth-child(1) image {
    overflow: hidden;
    border-top-left-radius: 8px;
    border-bottom-left-radius: 8px;
}

.multiple-image-item:last-child image {
    overflow: hidden;
    border-top-right-radius: 8px;
    border-bottom-right-radius: 8px;
}

.multiple-image-content .multiple-image-item:not(:last-child) {
    margin-right: 4px;
}

.more-images-len {
    position: absolute;
    right: 5px;
    bottom: 5px;
    display: flex;
    align-items: center;
    width: 44px;
    height: 20px;
    padding-left: 8px;
    border-radius: 10px;
    background: #000;
    color: #fff;
    font-size: 10px;
    opacity: .5;
}

.more-images-len image {
    width: 9px;
    height: 8px;
    margin-right: 2px;
}

.single-image-content {
    padding-top: 10px;
}

.single-image-content .single-image-item {
    position: relative;
    display: flex;
    overflow: hidden;
    max-width: calc((100vw - 34px) / 3 * 2);
    max-height: calc((100vw - 34px) / 3 * 2);
    border-radius: 8px;
}

.single-image-content image {
    position: absolute;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 100%;
}

.single-image-content .forum-content-top {
    margin-top: 10px;
}

.single-image-gif {
    position: absolute;
    right: 5px;
    bottom: 5px;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 35px;
    height: 20px;
    border-radius: 10px;
    background: #000;
    color: #fff;
    font-size: 10px;
    opacity: .5;
}