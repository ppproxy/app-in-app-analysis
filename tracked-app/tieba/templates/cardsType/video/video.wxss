.card-video-wrap {
    overflow: hidden;
    width: 100%;
    border-radius: 4px;
    background-color: #fff;
}

.card-video-wrap .video-img {
    position: relative;
    overflow: hidden;
    padding-bottom: 56.25%;
    background-color: #000;
}

.card-video-wrap .video-img .img {
    position: absolute;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 100%;
}

.card-video-wrap .video-img .video-play-icon {
    position: absolute;
    top: 50%;
    left: 50%;
    display: flex;
    width: 48px;
    height: 48px;
    transform: translate(-50%,-50%);
}

.card-video-wrap .video-img .video-play-info {
    position: absolute;
    right: 8px;
    bottom: 8px;
    display: flex;
    align-items: center;
    height: 18px;
    padding: 0 8px;
    border-radius: 9px;
    background-color: rgba(0,0,0,.65);
    color: #fff;
    font-size: 0;
    line-height: 18px;
}

.card-video-wrap .video-img .video-play-info .video-duration {
    font-size: 10px;
}

.card-video-wrap .video-img .video-play-info .video-play-times {
    font-size: 10px;
}

.card-video-wrap .video-img .video-play-info .margin-buffer {
    width: 1px;
    height: 8px;
    margin: 0 6px;
    background-color: rgba(255,255,255,.4);
}