.pb-mutual-area {
    position: fixed;
    bottom: 0;
    left: 0;
    z-index: 500;
    display: flex;
    align-items: center;
    overflow: hidden;
    width: 100%;
    padding: 11px 17px;
    background: #fff;
    box-shadow: 0 -2px 6px 0 rgba(0,0,0,.08);
}

.IPX-bottom {
    padding-bottom: 34px;
}

.item-wrap {
    margin-left: 23px;
}

.item-wrap>image {
    float: left;
    width: 26px;
    height: 26px;
}

.comment-container {
    flex: 1;
}

.comment {
    flex: 1;
    width: 100%;
    height: 36px;
    margin-left: 0;
    padding-left: 10px;
    border-radius: 18px;
    background: #ecedef;
    color: #999;
    font-size: 15px;
    line-height: 36px;
}

.reply {
    position: relative;
}

.icon-num {
    position: absolute;
    top: -6px;
    left: 12px;
    z-index: 300;
    display: flex;
    align-items: center;
    justify-content: center;
    min-width: 3.2vw;
    height: 16px;
    padding-right: 5px;
    padding-left: 5px;
    border-radius: 8px;
    background: #f34f18;
    color: #fff;
    font-size: 12px;
}