.small-app-list-wrap {
    display: flex;
    padding: 10px 17px 14px 17px;
    background: #f5f5f5;
}

.small-app-list-wrap .small-app-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-between;
    width: 62px;
    height: 67px;
    margin-right: 18px;
}

.small-app-list-wrap .small-app-item.small-app-item-more {
    margin-right: 0;
}

.small-app-list-wrap .small-app-item.small-app-item-more .small-app-avatar {
    background-color: #fff;
    box-shadow: 0 1px 6px 0 rgba(0,0,0,.08);
}

.small-app-list-wrap .small-app-item .small-app-avatar {
    display: flex;
    width: 45px;
    height: 45px;
    margin: 0 auto;
    border-radius: 50%;
    box-shadow: inset 0 0 0 1px rgba(0,0,0,.04);
}

.small-app-list-wrap .small-app-item .small-app-name {
    overflow: hidden;
    width: 56px;
    color: #000;
    font-size: 14px;
    line-height: 14px;
    text-align: center;
    text-overflow: ellipsis;
    white-space: nowrap;
}