.recommend {
    display: flex;
    align-items: center;
    justify-content: space-between;
    width: 100vw;
    height: 104rpx;
    padding: 0 34rpx;
    background-color: #f5f5f5;
}

.recommend-bg {
    width: 100vw;
    height: 104rpx;
}

.video-recommend {
    margin-left: -17px;
}

.header-recommend {
    position: fixed;
    z-index: 100;
    display: flex;
    align-items: center;
    justify-content: space-between;
    width: 100%;
    height: 104rpx;
    background: #f5f5f5;
    animation: slowdown .5s ease-in-out 0s 1;
}

.recommend-left {
    overflow: hidden;
    width: 70rpx;
    height: 70rpx;
    border-radius: 26rpx;
}

.recommend-left image {
    display: block;
    width: 100%;
    height: 100%;
    box-shadow: inset 0 0 0 1px rgba(0,0,0,.04);
}

.recommend-center {
    display: flex;
    align-items: center;
}

.recommend-center .name {
    display: flex;
    align-items: center;
    margin-left: 16rpx;
    font-size: 32rpx;
}

.recommend-center .name view {
    float: left;
    overflow: hidden;
    max-width: 400rpx;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.recommend-center .nums {
    height: 26rpx;
    color: #666;
    font-size: 26rpx;
    line-height: 26rpx;
}

.recommend-center .nums text {
    margin-right: 12rpx;
}

.recommend-right {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 114rpx;
    height: 50rpx;
    border-radius: 10rpx;
    background: #7559ff;
    color: #fff;
    font-size: 13px;
    letter-spacing: 0;
}

.recommend-right image {
    width: 100%;
    height: 100%;
}

.recommend-center-fromOthers,.recommend-center-fromSearch {
    display: flex;
    overflow: hidden;
    width: 518rpx;
    color: #000;
    font-size: 14px;
    line-height: 16px;
}

#scroll-left {
    display: flex;
    white-space: nowrap;
}

.scroll-left-start {
    animation: scrollLeft 8s linear infinite;
}

.highlight {
    color: #7559ff;
}

@keyframes scrollLeft {
    0% {
        transform: translateX(0);
    }

    20% {
        transform: translateX(0);
    }

    70% {
        transform: translateX(calc(518rpx - 100%));
    }

    100% {
        transform: translateX(calc(518rpx - 100%));
    }
}

@keyframes slowdown {
    0% {
        top: -104rpx;
    }

    100% {
        top: 0;
    }
}