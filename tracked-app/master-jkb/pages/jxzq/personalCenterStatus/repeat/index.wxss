page {
    background: #f5f5f5;
}

.wrap {
    box-sizing: border-box;
    padding-top: 120rpx;
}

.icon-wrap {
}

.img {
    height: 100%;
    width: 100%;
}

.icon-icon {
    box-sizing: border-box;
}

.icon-img {
    border-radius: 50%;
    height: 180rpx;
    margin-left: calc(50% - 90rpx);
    width: 180rpx;
}

.icon-tit {
    color: #000;
    font-family: PingFangSC-Medium;
    font-size: 42rpx;
    letter-spacing: 0;
    line-height: 58rpx;
    margin-top: 20rpx;
    text-align: center;
}

.btn-cont {
    box-sizing: border-box;
    display: flex;
    padding: 0 40rpx;
}

.left {
    background: #fff;
    border: 1px solid #ccc;
    color: #9c9c9c;
    width: 330rpx;
}

.left,.right {
    border-radius: 16rpx;
    font-family: PingFangSC-Medium;
    font-size: 34rpx;
    height: 96rpx;
    letter-spacing: 0;
    line-height: 92rpx;
    text-align: center;
}

.right {
    background: #0d8ce6;
    color: #fff;
    width: 100%;
}

.cuo {
    color: #666;
    font-family: PingFangSC-Regular;
    font-size: 32rpx;
    letter-spacing: 0;
    line-height: 44rpx;
    padding: 24rpx 0 48rpx;
    text-align: center;
}

.userInfo {
    background: #fff;
    border-radius: 16rpx;
    margin: 0 40rpx 40rpx;
    padding: 40rpx;
}

.userInfo_title {
    color: #000;
    font-size: 36rpx;
    font-weight: 700;
    letter-spacing: 0;
}

.userInfo_item_name {
    color: #9c9c9c;
    font-size: 28rpx;
    letter-spacing: 0;
    line-height: 32rpx;
    margin-top: 40rpx;
    word-break: break-all;
}

.userInfo_item_value {
    color: #333;
    font-size: 32rpx;
    letter-spacing: 0;
    line-height: 36rpx;
    margin-top: 16rpx;
    word-break: break-all;
}