.table {
    display: table;
    table-layout: fixed;
    width: 100%;
}

.colgroup {
    display: table-column-group;
}

.col {
    display: table-column;
}

.thead {
    display: table-header-group;
}

.tbody {
    display: table-row-group;
}

.tr {
    display: table-row;
}

.td,.th {
    display: table-cell;
    text-align: center;
    word-break: break-all;
}

.border--top {
    position: relative;
}

.border--top::after {
    background-color: #ebebeb;
    content: "";
    height: 1px;
    left: 0;
    position: absolute;
    right: 0;
    top: 0;
    transform: scaleY(.5);
    width: 100%;
}

.border--bottom {
    position: relative;
}

.border--bottom::after {
    background-color: #ebebeb;
    bottom: 0;
    content: "";
    height: 1px;
    left: 0;
    position: absolute;
    right: 0;
    transform: scaleY(.5);
    width: 100%;
}

.border--left::after {
    left: 0;
}

.border--left {
    position: relative;
}

.border--left::after {
    background-color: #ebebeb;
    bottom: 0;
    content: "";
    position: absolute;
    right: 0;
    top: 0;
    transform: scaleX(.5);
    width: 100%;
    width: 1px;
}

.agree {
    align-items: flex-start;
    display: flex;
    flex-direction: row;
    justify-content: flex-start;
}

.agree__checkbox {
    display: none;
    left: -999rpx;
    position: absolute;
}

.agree__desc {
    font-size: 26rpx;
    line-height: 36rpx;
}

.agree__checkbox__container {
    margin-right: 10rpx;
}

.checkbox__icon {
    height: 32rpx;
    line-height: 32rpx;
    margin-top: 0rpx;
    width: 32rpx;
}

.checkbox__icon--unchecked {
    background: #fafafa;
    border: 1px solid #bbbec4;
    border-radius: 8rpx;
    border-radius: 3rpx;
    box-sizing: border-box;
    height: 32rpx;
    line-height: 32rpx;
    width: 32rpx;
}

.checkbox__icon--checked {
    color: #4293f4;
}