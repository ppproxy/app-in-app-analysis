.table {
    display: table;
    table-layout: fixed;
    width: 100%;
}

.colgroup {
    display: table-column-group;
}

.col {
    display: table-column;
}

.thead {
    display: table-header-group;
}

.tbody {
    display: table-row-group;
}

.tr {
    display: table-row;
}

.td,.th {
    display: table-cell;
    text-align: center;
    word-break: break-all;
}

.border--top {
    position: relative;
}

.border--top::after {
    background-color: #ebebeb;
    content: "";
    height: 1px;
    left: 0;
    position: absolute;
    right: 0;
    top: 0;
    transform: scaleY(.5);
    width: 100%;
}

.border--bottom {
    position: relative;
}

.border--bottom::after {
    background-color: #ebebeb;
    bottom: 0;
    content: "";
    height: 1px;
    left: 0;
    position: absolute;
    right: 0;
    transform: scaleY(.5);
    width: 100%;
}

.border--left::after {
    left: 0;
}

.border--left {
    position: relative;
}

.border--left::after {
    background-color: #ebebeb;
    bottom: 0;
    content: "";
    position: absolute;
    right: 0;
    top: 0;
    transform: scaleX(.5);
    width: 100%;
    width: 1px;
}

.item {
    position: relative;
}

.item__tail {
    background-color: #edbfc3;
    height: 100%;
    left: 15rpx;
    position: absolute;
    top: 6rpx;
    width: 2rpx;
}

.item__tail--last {
    display: none;
}

.item__head {
    background: #fff;
    border: 10rpx solid #fff;
    border-radius: 100rpx;
    color: #4293f4;
    margin-left: -10rpx;
    position: absolute;
    top: 6rpx;
}

.item__head--pending {
    background-color: #fff;
    border: 4rpx solid #edbfc3;
    border-radius: 50%;
    box-sizing: border-box;
}

.item__head--normal,.item__head--pending {
    height: 30rpx;
    line-height: 30rpx;
    width: 30rpx;
}

.item__head--normal {
    background: #4293f4;
    background-color: #4293f4;
    border-radius: 50%;
    border-radius: 100rpx;
}

.item__head--icon {
    left: -8rpx;
    position: relative;
}

.item__head--warn {
    color: #f90;
}

.item__content {
    margin-left: 90rpx;
    padding-bottom: 60rpx;
    padding-top: 10rpx;
}

.item--normal .item__tail {
    background-color: #4293f4;
}