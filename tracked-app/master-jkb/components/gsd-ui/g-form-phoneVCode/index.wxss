.desc {
    color: #000;
    font-size: 30rpx;
    font-weight: 400;
    line-height: 40rpx;
    margin-bottom: 1px;
}

.vcode-contain {
    align-items: center;
    display: flex;
    height: 52rpx;
    justify-content: space-between;
}

.vcode-input {
    flex: 5;
    font-size: 36rpx;
    line-height: 48rpx;
    margin-right: 120rpx;
}

.vcode-button,.vcode-input {
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.vcode-button {
    background: #fafafa;
    border: 1px solid rgba(0,0,0,.1);
    border-radius: 8rpx;
    color: #666;
    flex: 2;
    font-size: 26rpx!important;
    padding: 0!important;
}