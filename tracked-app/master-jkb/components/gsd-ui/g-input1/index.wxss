.table {
    display: table;
    table-layout: fixed;
    width: 100%;
}

.colgroup {
    display: table-column-group;
}

.col {
    display: table-column;
}

.thead {
    display: table-header-group;
}

.tbody {
    display: table-row-group;
}

.tr {
    display: table-row;
}

.td,.th {
    display: table-cell;
    text-align: center;
    word-break: break-all;
}

.border--top {
    position: relative;
}

.border--top::after {
    background-color: #ebebeb;
    content: "";
    height: 1px;
    left: 0;
    position: absolute;
    right: 0;
    top: 0;
    transform: scaleY(.5);
    width: 100%;
}

.border--bottom {
    position: relative;
}

.border--bottom::after {
    background-color: #ebebeb;
    bottom: 0;
    content: "";
    height: 1px;
    left: 0;
    position: absolute;
    right: 0;
    transform: scaleY(.5);
    width: 100%;
}

.border--left::after {
    left: 0;
}

.border--left {
    position: relative;
}

.border--left::after {
    background-color: #ebebeb;
    bottom: 0;
    content: "";
    position: absolute;
    right: 0;
    top: 0;
    transform: scaleX(.5);
    width: 100%;
    width: 1px;
}

.input {
    border-bottom: 1px solid #ebebeb;
    padding-bottom: 36rpx;
    padding-top: 36rpx;
}

.input__label {
    font-size: 30rpx;
    line-height: 40rpx;
}

.input__container,.input__wrapper {
    align-items: center;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
}

.input__wrapper {
    flex: 1;
    position: relative;
}

input.input__element {
    display: inline-block;
    flex: 1;
    font-size: 36rpx;
    height: 48rpx;
    line-height: 48rpx;
    max-height: 48rpx;
    min-height: 48rpx;
}

.input__placeholder {
    color: #bbbec4;
    font-size: 36rpx;
    line-height: 48rpx;
}

.input__prepend {
    border-right: 2rpx solid #bbbec4;
    font-size: 36rpx;
    line-height: 48rpx;
    margin-right: 20rpx;
    max-width: 120rpx;
    overflow: hidden;
    padding-right: 20rpx;
    position: relative;
}

.input__append {
    margin-left: 20rpx;
    overflow: hidden;
}

.input__icon__container {
    align-items: center;
    display: flex;
    flex-direction: row;
    justify-content: flex-start;
}

.input__icon,.input__iconInfo__container {
    display: inline-block;
    line-height: 48rpx;
    max-height: 48rpx;
    min-height: 48rpx;
    position: static;
    vertical-align: middle;
}

.input__icon {
    margin-left: 30rpx;
}

.input__icon--info {
    color: #4293f4;
}

.input__icon--clear {
    color: #bbbec4;
}

input.input__elementIcon {
    display: inline-block;
    vertical-align: middle;
}

.input__containerIcon {
    vertical-align: middle;
}

.static-item {
    border-bottom: 1px solid #ebebeb!important;
    position: static!important;
}

input.input__elementIcon {
    width: 90%;
}

.input__verify--code {
